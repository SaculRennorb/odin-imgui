Stb_is_word_boundary :: proc(str : ^IMSTB_TEXTEDIT_STRING, idx : i32) -> i32
{
	return idx > 0 ? (STB_TEXTEDIT_IS_SPACE(Stb_STB_TEXTEDIT_GETCHAR(str, idx - 1)) && !STB_TEXTEDIT_IS_SPACE(Stb_STB_TEXTEDIT_GETCHAR(str, idx))) : 1
}

