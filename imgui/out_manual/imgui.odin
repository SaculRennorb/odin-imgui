ClearIniSettings :: proc()
{
	g : ^Context = GImGui
	clear(&g.SettingsIniData)
	for &handler in g.SettingsHandlers.Data[:g.SettingsHandlers.Size] { if handler.ClearAllFn != nil { handler.ClearAllFn(g, &handler) } }
