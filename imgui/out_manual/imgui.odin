//-----------------------------------------------------------------------------
// IM_MALLOC(), IM_FREE(), IM_NEW(), IM_PLACEMENT_NEW(), IM_DELETE()
// We call C++ constructor on own allocated memory via the placement "new(ptr) Type()" syntax.
// Defining a custom placement new() with a custom parameter allows us to bypass including <new> which on some platforms complains when user has disabled exceptions.
//-----------------------------------------------------------------------------

NewWrapper :: struct { }
// This is only required so we can use the symmetrical new()
IM_ALLOC :: #force_inline proc (#any_int _SIZE : uint, loc := #caller_location) -> rawptr
{
	return MemAlloc(_SIZE, loc)
}

IM_FREE :: #force_inline proc (_PTR : rawptr, loc := #caller_location) { MemFree(_PTR, loc) }

IM_NEW_MEM :: #force_inline proc ($_TYPE : typeid, loc := #caller_location)  -> ^_TYPE
{
	return transmute(^_TYPE)MemAlloc(size_of(_TYPE), loc)
}

IM_NEW :: #force_inline proc ($_TYPE : typeid, loc := #caller_location)  -> ^_TYPE
{
	ptr := transmute(^_TYPE)MemAlloc(size_of(_TYPE), loc)
	
	init(ptr)
	return ptr
}

IM_DELETE :: proc(p : ^$T, loc := #caller_location) { if p != nil { deinit(p); MemFree(p, loc) } }

//-----------------------------------------------------------------------------
// Vector<>
// Lightweight std::vector<>-like class to avoid dragging dependencies (also, some implementations of STL with debug enabled are absurdly slow, we bypass it so our code runs fast in debug).
//-----------------------------------------------------------------------------
// - You generally do NOT need to care or use this ever. But we need to make it available in imgui.h because some of our public structures are relying on it.
// - We use std-like naming convention here, which is a little unusual for this codebase.
// - Important: clear() frees memory, resize(0) keep the allocated buffer. We use resize(0) a lot to intentionally recycle allocated buffers across frames and amortize our costs.
// - Important: our implementation does NOT call C++ constructors/destructors, we treat everything as raw data! This is intentional but be extra mindful of that,
//   Do NOT use this class as a std::vector replacement in your own code! Many of the structures used by dear imgui can be safely initialized by a zero-memset.
//-----------------------------------------------------------------------------


Vector :: struct($T : typeid) {
	Size : i32,
	Capacity : i32,
	Data : [^]T,
}

Vector_deinit :: proc(this : ^Vector($T), loc := #caller_location) { if this.Data != nil { IM_FREE(this.Data, loc) } }

// Constructors, destructor
Vector_init_0 :: #force_inline proc(this : ^Vector($T))
{
	this.Capacity = 0; this.Size = this.Capacity; this.Data = nil
}

// Constructors, destructor
Vector_init_1 :: #force_inline proc(this : ^Vector($T), src : ^Vector(T))
{
	this.Capacity = 0; this.Size = this.Capacity; this.Data = nil; operator_Assign(src)
}

// Important: does not destruct anything
Vector_clear :: #force_inline proc(this : ^Vector($T), loc := #caller_location) {
	if this.Data != nil { this.Capacity = 0; this.Size = this.Capacity; IM_FREE(this.Data, loc); this.Data = nil }
}

// Important: never called automatically! always explicit.
clear_delete :: #force_inline proc(this : ^Vector($T))
{
	for n : i32 = 0; n < this.Size; n += 1 { IM_DELETE(this.Data[n]) }; Vector_clear(this)
}

// Important: never called automatically! always explicit.
clear_destruct :: #force_inline proc(this : ^Vector($T))
{
	for n : i32 = 0; n < this.Size; n += 1 { deinit(&this.Data[n]) }; Vector_clear(this)
}

Vector_empty :: #force_inline proc(this : ^Vector($T)) -> bool { return this.Size == 0 }

Vector_size :: #force_inline proc(this : ^Vector($T)) -> i32 { return this.Size }

Vector_size_in_bytes :: #force_inline proc(this : ^Vector($T)) -> i32 { return this.Size * cast(i32) size_of(T) }

Vector_max_size :: #force_inline proc(this : ^Vector($T)) -> i32 { return 0x7FFFFFFF / cast(i32) size_of(T) }

Vector_capacity :: #force_inline proc(this : ^Vector($T)) -> i32 { return this.Capacity }

Vector_begin :: #force_inline proc(this : ^Vector($T)) -> [^]T
{
	return this.Data
}

Vector_end :: #force_inline proc(this : ^Vector($T)) -> ^T
{
	return &this.Data[this.Size]
}

front :: #force_inline proc(this : ^Vector($T)) -> ^T
{
	IM_ASSERT(this.Size > 0); return &this.Data[0]
}

back :: #force_inline proc(this : ^Vector($T)) -> ^T
{
	IM_ASSERT(this.Size > 0); return &this.Data[this.Size - 1]
}

Vector_swap :: #force_inline proc(this : ^Vector($T), rhs : ^Vector(T))
{
	rhs_size : i32 = rhs.Size; rhs.Size = this.Size; this.Size = rhs_size; rhs_cap : i32 = rhs.Capacity; rhs.Capacity = this.Capacity; this.Capacity = rhs_cap; rhs_data : ^T = rhs.Data; rhs.Data = this.Data; this.Data = rhs_data
}

Vector__grow_capacity :: #force_inline proc(this : ^Vector($T), sz : i32) -> i32
{
	new_capacity : i32 = this.Capacity != 0 ? (this.Capacity + this.Capacity / 2) : 8;
	return new_capacity > sz ? new_capacity : sz
}

Vector_resize_0 :: #force_inline proc(this : ^Vector($T), new_size : i32, loc := #caller_location)
{
	if new_size > this.Capacity { reserve(this, Vector__grow_capacity(this, new_size), loc) };
	this.Size = new_size
}

Vector_resize_1 :: #force_inline proc(this : ^Vector($T), new_size : i32, v : T, loc := #caller_location)
{
	if new_size > this.Capacity { reserve(this, Vector__grow_capacity(this, new_size), loc) };
	if new_size > this.Size {
		for n : i32 = this.Size; n < new_size; n += 1 {
			this.Data[n] = v
		}
	};
	this.Size = new_size
}

// Resize a vector to a smaller size, guaranteed not to cause a reallocation
shrink :: #force_inline proc(this : ^Vector($T), new_size : i32)
{
	IM_ASSERT(new_size <= this.Size); this.Size = new_size
}

Vector_reserve :: #force_inline proc(this : ^Vector($T), new_capacity : i32, loc := #caller_location)
{
	if new_capacity <= this.Capacity { return }
	new_data : ^T = cast(^T) IM_ALLOC(cast(uint) new_capacity * size_of(T), loc)
	if this.Data != nil {
		memcpy(new_data, this.Data, cast(int) this.Size * size_of(T))
		IM_FREE(this.Data, loc)
	}
	this.Data = new_data
	this.Capacity = new_capacity
}

reserve_discard :: #force_inline proc(this : ^Vector($T), new_capacity : i32, loc := #caller_location)
{
	if new_capacity <= this.Capacity { return }
	if this.Data != nil { IM_FREE(this.Data, loc) }
	this.Data = cast(^T) IM_ALLOC(cast(uint) new_capacity * size_of(T), loc)
	this.Capacity = new_capacity
}

// NB: It is illegal to call push_back/push_front/insert with a reference pointing inside the Vector data itself! e.g. v.push_back(v[10]) is forbidden.
Vector_push_back :: #force_inline proc(this : ^Vector($T), v : T)
{
	if this.Size == this.Capacity { Vector_reserve(this, Vector__grow_capacity(this, this.Size + 1)) }
	this.Data[this.Size] = v
	post_incr(&this.Size)
}

pop_back :: #force_inline proc(this : ^Vector($T))
{
	IM_ASSERT(this.Size > 0); post_decr(&this.Size)
}

push_front :: #force_inline proc(this : ^Vector($T), v : T) { if this.Size == 0 { Vector_push_back(this, v) }
else { insert(this, this.Data, v) } }

Vector_erase_0 :: #force_inline proc(this : ^Vector($T), it : ^T) -> ^T
{
	IM_ASSERT(it >= this.Data && it < &this.Data[this.Size])
	off : int = mem.ptr_sub(it, &this.Data[0])
	memmove(&this.Data[off], &this.Data[off + 1], (cast(int) this.Size - off - 1) * size_of(T))
	post_decr(&this.Size)
	return &this.Data[off]
}

Vector_erase_1 :: #force_inline proc(this : ^Vector($T), it : ^T, it_last : ^T) -> ^T
{
	IM_ASSERT(it >= this.Data && it < this.Data[this.Size:] && it_last >= it && it_last <= this.Data[this.Size:])
	count : int = mem.ptr_sub(it_last, it)
	off : int = mem.ptr_sub(it, cast(^T)this.Data)
	memmove(&this.Data[off], &this.Data[off + count], (cast(int) this.Size - off - count) * size_of(T))
	this.Size -= cast(i32) count
	return &this.Data[off]
}

Vector_erase_unsorted :: #force_inline proc(this : ^Vector($T), it : ^T) -> ^T
{
	IM_ASSERT(it >= this.Data && it < this.Data[this.Size])
	off : int = mem.ptr_sub(it, this.Data)
	if it < this.Data[this.Size - 1] { memcpy(&this.Data[off], &this.Data[this.Size - 1], size_of(T)) }
	post_decr(&this.Size)
	return &this.Data[off]
}

insert :: #force_inline proc(this : ^Vector($T), it : ^T, v : T) -> ^T
{
	IM_ASSERT(it >= this.Data && it <= &this.Data[this.Size])
	off := mem.ptr_sub(it, cast(^T) this.Data)
	if this.Size == this.Capacity { Vector_reserve(this, Vector__grow_capacity(this, this.Size + 1)) }
	if cast(i32) off < this.Size { memmove(&this.Data[off + 1], &this.Data[off], (cast(int) this.Size - off) * size_of(T)) }
	this.Data[off] = v
	post_incr(&this.Size)
	return &this.Data[off]
}

contains :: #force_inline proc(this : Vector($T), v : T) -> bool
{
	data : ^T = this.Data; data_end : ^T = &this.Data[this.Size]; for data < data_end { if post_incr(&data)^ == v { return true } }; return false
}

find :: #force_inline proc(this : ^Vector($T), v : T) -> ^T
{
	data : ^T = this.Data; data_end : ^T = &this.Data[this.Size]; for data < data_end { if data^ == v { break }
else { pre_incr(&data) } }; return data
}

Vector_find_index :: #force_inline proc(this : ^Vector($T), v : T) -> i32
{
	data_end : ^T = &this.Data[this.Size]; it : ^T = find(this, v); if it == data_end { return -1 }; off : int = mem.ptr_sub(it, &this.Data[0]); return cast(i32) off
}

find_erase :: #force_inline proc(this : ^Vector($T), v : T) -> bool
{
	it : ^T = find(this, v); if it < &this.Data[this.Size] {erase(this, it); return true
	}; return false
}

Vector_find_erase_unsorted :: #force_inline proc(this : ^Vector($T), v : T) -> bool
{
	it : ^T = find(this, v); if it < &this.Data[this.Size] {Vector_erase_unsorted(this, it); return true
	}; return false
}

Vector_index_from_ptr :: #force_inline proc(this : ^Vector($T), it : ^T) -> i32
{
	IM_ASSERT(it >= this.Data && it < &this.Data[this.Size]); off : int = mem.ptr_sub(it, &this.Data[0]); return cast(i32) off
}


