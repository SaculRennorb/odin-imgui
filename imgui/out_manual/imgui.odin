// Input Functions
// Queue a new key down/up event. Key should be "translated" (as in, generally Key_A matches the key end-user would use to emit an 'A' character)
AddKeyEvent :: proc(this : ^IO, key : Key, down : bool)
{
	if !this.AppAcceptingEvents { return }
	AddKeyAnalogEvent(this, key, down, down ? 1.0 : 0.0)
}

// [Optional] Specify index for legacy <1.87 IsKeyXXX() functions with native indices + specify native keycode, scancode.
// [Optional] Call after AddKeyEvent().
// Specify native keycode, scancode + Specify index for legacy <1.87 IsKeyXXX() functions with native indices.
// If you are writing a backend in 2022 or don't use IsKeyXXX() with native values that are not Key values, you can avoid calling this.
SetKeyEventNativeData :: proc(this : ^IO, key : Key, native_keycode : i32, native_scancode : i32, native_legacy_index : i32 = -1)
{
	if key == Key.Key_None { return }
	IM_ASSERT(IsNamedKey(key)); // >= 512
	IM_ASSERT(native_legacy_index == -1 || IsLegacyKey(cast(Key) native_legacy_index)); // >= 0 && <= 511
	IM_UNUSED(key); // Yet unused
	IM_UNUSED(native_keycode); // Yet unused
	IM_UNUSED(native_scancode); // Yet unused
	IM_UNUSED(native_legacy_index); // Yet unused
}

// Set master flag for accepting key/mouse/text events (default to true). Useful if you have native dialog boxes that are interrupting your application loop/refresh, and you want to disable events being queued while your app is frozen.
// Set master flag for accepting key/mouse/text events (default to true). Useful if you have native dialog boxes that are interrupting your application loop/refresh, and you want to disable events being queued while your app is frozen.
IO_SetAppAcceptingEvents :: proc(this : ^IO, accepting_events : bool)
{
	this.AppAcceptingEvents = accepting_events
}

// Queue a mouse position update. Use -FLT_MAX,-FLT_MAX to signify no mouse (e.g. app not focused and not hovered)
// Queue a mouse move event
AddMousePosEvent :: proc(this : ^IO, x : f32, y : f32)
{
	IM_ASSERT(this.Ctx != nil)
	g : ^Context = this.Ctx
	if !this.AppAcceptingEvents { return }

	// Apply same flooring as UpdateMouseInputs()
	pos := Vec2{ (x > -FLT_MAX) ? Floor(x) : x, (y > -FLT_MAX) ? Floor(y) : y }

	// Filter duplicate
	latest_event : ^InputEvent = FindLatestInputEvent(g, InputEventType.InputEventType_MousePos)
	latest_pos : Vec2 = latest_event != nil ? Vec2{latest_event.MousePos.PosX, latest_event.MousePos.PosY} : g.IO.MousePos
	if latest_pos.x == pos.x && latest_pos.y == pos.y { return }

	e : InputEvent
	e.Type = InputEventType.InputEventType_MousePos
	e.Source = InputSource.InputEventType_Mouse
	e.EventId = post_incr(&g.InputEventsNextEventId)
	e.MousePos.PosX = pos.x
	e.MousePos.PosY = pos.y
	e.MousePos.MouseSource = g.InputEventsNextMouseSource
	push_back(&g.InputEventsQueue, e)
}

// Queue a mouse button change
AddMouseButtonEvent :: proc(this : ^IO, mouse_button : MouseButton, down : bool)
{
	IM_ASSERT(this.Ctx != nil)
	g : ^Context = this.Ctx
	IM_ASSERT(mouse_button >= MouseButton(0) && mouse_button < MouseButton_.MouseButton_COUNT)
	if !this.AppAcceptingEvents { return }

	mouse_button := mouse_button
	// On MacOS X: Convert Ctrl(Super)+Left click into Right-click: handle held button.
	if this.ConfigMacOSXBehaviors && mouse_button == MouseButton(0) && this.MouseCtrlLeftAsRightClick {
		// Order of both statements matterns: this event will still release mouse button 1
		mouse_button = MouseButton(1)
		if !down { this.MouseCtrlLeftAsRightClick = false }
	}

	// Filter duplicate
	latest_event : ^InputEvent = FindLatestInputEvent(g, InputEventType.InputEventType_MouseButton, cast(i32) mouse_button)
	latest_button_down : bool = latest_event != nil ? latest_event.MouseButton.Down : g.IO.MouseDown[mouse_button]
	if latest_button_down == down { return }

	// On MacOS X: Convert Ctrl(Super)+Left click into Right-click.
	// - Note that this is actual physical Ctrl which is Mod_Super for us.
	// - At this point we want from !down to down, so this is handling the initial press.
	if this.ConfigMacOSXBehaviors && mouse_button == MouseButton(0) && down {
		latest_super_event : ^InputEvent = FindLatestInputEvent(g, InputEventType.InputEventType_Key, cast(i32) Key.Mod_Super)
		if latest_super_event != nil ? latest_super_event.Key.Down : g.IO.KeySuper {
			IMGUI_DEBUG_LOG_IO(g, "[io] Super+Left Click aliased into Right Click\n")
			this.MouseCtrlLeftAsRightClick = true
			AddMouseButtonEvent(this, MouseButton(1), true); // This is just quicker to write that passing through, as we need to filter duplicate again.
			return
		}
	}

	e : InputEvent
	e.Type = InputEventType.InputEventType_MouseButton
	e.Source = InputSource.InputEventType_Mouse
	e.EventId = post_incr(&g.InputEventsNextEventId)
	e.MouseButton.Button = mouse_button
	e.MouseButton.Down = down
	e.MouseButton.MouseSource = g.InputEventsNextMouseSource
	push_back(&g.InputEventsQueue, e)
}

// Queue a mouse wheel update. wheel_y<0: scroll down, wheel_y>0: scroll up, wheel_x<0: scroll right, wheel_x>0: scroll left.
// Queue a mouse wheel event (some mouse/API may only have a Y component)
AddMouseWheelEvent :: proc(this : ^IO, wheel_x : f32, wheel_y : f32)
{
	IM_ASSERT(this.Ctx != nil)
	g : ^Context = this.Ctx

	// Filter duplicate (unlike most events, wheel values are relative and easy to filter)
	if !this.AppAcceptingEvents || (wheel_x == 0.0 && wheel_y == 0.0) { return }

	e : InputEvent
	e.Type = InputEventType.InputEventType_MouseWheel
	e.Source = InputSource.InputEventType_Mouse
	e.EventId = post_incr(&g.InputEventsNextEventId)
	e.MouseWheel.WheelX = wheel_x
	e.MouseWheel.WheelY = wheel_y
	e.MouseWheel.MouseSource = g.InputEventsNextMouseSource
	push_back(&g.InputEventsQueue, e)
}

// Queue a mouse source change (Mouse/TouchScreen/Pen)
// This is not a real event, the data is latched in order to be stored in actual Mouse events.
// This is so that duplicate events (e.g. Windows sending extraneous WM_MOUSEMOVE) gets filtered and are not leading to actual source changes.
AddMouseSourceEvent :: proc(this : ^IO, source : MouseSource)
{
	IM_ASSERT(this.Ctx != nil)
	g : ^Context = this.Ctx
	g.InputEventsNextMouseSource = source
}

// Queue a mouse hovered viewport. Requires backend to set BackendFlags_HasMouseHoveredViewport to call this (for multi-viewport support).
AddMouseViewportEvent :: proc(this : ^IO, viewport_id : ID)
{
	IM_ASSERT(this.Ctx != nil)
	g : ^Context = this.Ctx
	//IM_ASSERT(g.IO.BackendFlags & BackendFlags_HasMouseHoveredViewport);
	if !this.AppAcceptingEvents { return }

	// Filter duplicate
	latest_event : ^InputEvent = FindLatestInputEvent(g, InputEventType.InputEventType_MouseViewport)
	latest_viewport_id : ID = latest_event != nil ? latest_event.MouseViewport.HoveredViewportID : g.IO.MouseHoveredViewport
	if latest_viewport_id == viewport_id { return }

	e : InputEvent
	e.Type = InputEventType.InputEventType_MouseViewport
	e.Source = InputSource.InputEventType_Mouse
	e.MouseViewport.HoveredViewportID = viewport_id
	push_back(&g.InputEventsQueue, e)
}

// Queue a gain/loss of focus for the application (generally based on OS/platform focus of your window)
AddFocusEvent :: proc(this : ^IO, focused : bool)
{
	IM_ASSERT(this.Ctx != nil)
	g : ^Context = this.Ctx

	// Filter duplicate
	latest_event : ^InputEvent = FindLatestInputEvent(g, InputEventType.InputEventType_Focus)
	latest_focused : bool = latest_event != nil ? latest_event.AppFocused.Focused : !g.IO.AppFocusLost
	if latest_focused == focused || (this.ConfigDebugIgnoreFocusLoss && !focused) { return }

	e : InputEvent
	e.Type = InputEventType.InputEventType_Focus
	e.EventId = post_incr(&g.InputEventsNextEventId)
	e.AppFocused.Focused = focused
	push_back(&g.InputEventsQueue, e)
}

