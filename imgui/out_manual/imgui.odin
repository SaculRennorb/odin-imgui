AddSettingsHandler :: proc(handler : ^SettingsHandler)
{
	g : ^Context = GImGui
	IM_ASSERT(FindSettingsHandler(handler.TypeName) == nil)
	push_back(&g.SettingsHandlers, handler^)
}

RemoveSettingsHandler :: proc(type_name : string)
{
	g : ^Context = GImGui
	if handler : ^SettingsHandler = FindSettingsHandler(type_name); handler != nil { erase(&g.SettingsHandlers, handler) }
}

FindSettingsHandler :: proc(type_name : string) -> ^SettingsHandler
{
	g : ^Context = GImGui
	type_hash : ID = HashStr(type_name)
	for &handler in g.SettingsHandlers.Data[:g.SettingsHandlers.Size] { if handler.TypeHash == type_hash { return &handler } }

	return nil
}

