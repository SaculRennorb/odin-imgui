// Helper: BitArray class (wrapper over BitArray functions)
// Store 1-bit per value.
BitArray :: struct($BITCOUNT : u32, $OFFSET : i32 = 0) {
	Storage : [(BITCOUNT + 31) >> 5]U32,
}

BitArray_init :: proc(this : ^BitArray($BITCOUNT, $OFFSET)) { ClearAllBits() }

BitArray_ClearAllBits :: proc(this : ^BitArray($BITCOUNT, $OFFSET)) { memset(this.Storage, 0, size_of(Storage)) }

BitArray_SetAllBits :: proc(this : ^BitArray($BITCOUNT, $OFFSET)) { memset(this.Storage, 255, size_of(Storage)) }

BitArray_TestBit :: proc(this : ^BitArray($BITCOUNT, $OFFSET), n : u32) -> bool
{
	n := n + transmute(u32)OFFSET; IM_ASSERT(n >= 0 && n < BITCOUNT); return IM_BITARRAY_TESTBIT(raw_data(&this.Storage), n)
}

BitArray_SetBit :: proc(this : ^BitArray($BITCOUNT, $OFFSET), n : u32)
{
	n := n + transmute(u32)OFFSET; IM_ASSERT(n >= 0 && n < BITCOUNT); BitArraySetBit(raw_data(&this.Storage), n)
}

BitArray_ClearBit :: proc(this : ^BitArray($BITCOUNT, $OFFSET), n : u32)
{
	n := n + transmute(u32)OFFSET; IM_ASSERT(n >= 0 && n < BITCOUNT); BitArrayClearBit(raw_data(&this.Storage), n)
}

// Works on range [n..n2)
BitArray_SetBitRange :: proc(this : ^BitArray($BITCOUNT, $OFFSET), n : u32, n2 : u32)
{
	n := n + transmute(u32)OFFSET; n2 += OFFSET; IM_ASSERT(n >= 0 && n < BITCOUNT && n2 > n && n2 <= BITCOUNT); BitArraySetBitRange(raw_data(&this.Storage), n, n2)
}

