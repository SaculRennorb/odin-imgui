// Retrieve list of range (2 int per range, values are inclusive)
GetGlyphRangesDefault :: proc(this : ^FontAtlas) -> [^]Wchar
{
	@(static) ranges := [?]Wchar {
		0x0020, 0x00FF, // Basic Latin + Latin Supplement
		0,
	}
	return raw_data(&ranges)
}

// Default + Greek and Coptic
FontAtlas_GetGlyphRangesGreek :: proc(this : ^FontAtlas) -> [^]Wchar
{
	@(static) ranges := [?]Wchar {
		0x0020, 0x00FF, // Basic Latin + Latin Supplement
		0x0370, 0x03FF, // Greek and Coptic
		0,
	}
	return raw_data(&ranges)
}

// Default + Korean characters
FontAtlas_GetGlyphRangesKorean :: proc(this : ^FontAtlas) -> [^]Wchar
{
	@(static) ranges := [?]Wchar {
		0x0020, 0x00FF, // Basic Latin + Latin Supplement
		0x3131, 0x3163, // Korean alphabets
		0xAC00, 0xD7A3, // Korean characters
		0xFFFD, 0xFFFD, // Invalid
		0,
	}
	return raw_data(&ranges)
}

// Default + Half-Width + Japanese Hiragana/Katakana + full set of about 21000 CJK Unified Ideographs
FontAtlas_GetGlyphRangesChineseFull :: proc(this : ^FontAtlas) -> [^]Wchar
{
	@(static) ranges := [?]Wchar {
		0x0020, 0x00FF, // Basic Latin + Latin Supplement
		0x2000, 0x206F, // General Punctuation
		0x3000, 0x30FF, // CJK Symbols and Punctuations, Hiragana, Katakana
		0x31F0, 0x31FF, // Katakana Phonetic Extensions
		0xFF00, 0xFFEF, // Half-width characters
		0xFFFD, 0xFFFD, // Invalid
		0x4e00, 0x9FAF, // CJK Ideograms
		0,
	}
	return raw_data(&ranges)
}

UnpackAccumulativeOffsetsIntoRanges :: proc(base_codepoint : i32, accumulative_offsets : []i16, out_ranges : [^]Wchar)
{
	out_ranges := out_ranges
	base_codepoint := base_codepoint

	for offset, n in accumulative_offsets {
		out_ranges[1] = cast(Wchar) (base_codepoint + i32(accumulative_offsets[n])); out_ranges[0] = out_ranges[1]
		base_codepoint += i32(accumulative_offsets[n])
		out_ranges = out_ranges[2:]
	}

	out_ranges[0] = 0
}

