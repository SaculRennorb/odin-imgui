// Full version, ensure both points are fully clipped.
ClipWithFull :: proc(this : ^Rect, r : Rect)
{
	this.Min = Clamp(this.Min, r.Min, r.Max); this.Max = Clamp(this.Max, r.Min, r.Max)
}

