InputText :: proc(label : string, buf : []u8, flags : InputTextFlags = {}, callback : InputTextCallback = nil, user_data : rawptr = nil) -> bool
{
	IM_ASSERT((flags & cast(InputTextFlags) InputTextFlagsPrivate_.InputTextFlags_Multiline) == {}); // call InputTextMultiline()
	return InputTextEx(label, "", buf, Vec2{0, 0}, flags, callback, user_data)
}

InputTextMultiline :: proc(label : string, buf : []u8, size : Vec2, flags : InputTextFlags = {}, callback : InputTextCallback = nil, user_data : rawptr = nil) -> bool
{
	return InputTextEx(label, "", buf, size, flags | cast(InputTextFlags) InputTextFlagsPrivate_.InputTextFlags_Multiline, callback, user_data)
}

InputTextWithHint :: proc(label : string, hint : string, buf : []u8, flags : InputTextFlags = {}, callback : InputTextCallback = nil, user_data : rawptr = nil) -> bool
{
	IM_ASSERT((flags & cast(InputTextFlags) InputTextFlagsPrivate_.InputTextFlags_Multiline) == {}); // call InputTextMultiline() or  InputTextEx() manually if you need multi-line + hint.
	return InputTextEx(label, hint, buf, Vec2{0, 0}, flags, callback, user_data)
}

// This is only used in the path where the multiline widget is inactivate.
InputTextCalcTextLenAndLineCount :: proc(text : string) -> i32
{
	line_count : i32 = 0
	for c in text {
		if c == '\n' { line_count += 1 }
	}
	return line_count
}

// FIXME: Ideally we'd share code with Font::CalcTextSizeA()
InputTextCalcTextSize :: proc(ctx : ^Context, text_begin : [^]u8, text_end : ^u8, remaining : ^[^]u8 = nil, out_offset : ^Vec2 = nil, stop_on_new_line : bool = false) -> Vec2
{
	g : ^Context = ctx
	font : ^Font = g.Font
	line_height : f32 = g.FontSize
	scale : f32 = line_height / font.FontSize

	text_size : Vec2 = Vec2{0, 0}
	line_width : f32 = 0.0

	s := text_begin
	for s < text_end {
		c : u32 = cast(u32) s[0]
		if c < 0x80 { s = s[1:] }
		else { s = s[TextCharFromUtf8(&c, s, text_end):] }

		if c == '\n' {
			text_size.x = Max(text_size.x, line_width)
			text_size.y += line_height
			line_width = 0.0
			if stop_on_new_line { break }
			continue
		}
		if c == '\r' { continue }

		char_width : f32 = (cast(i32) c < font.IndexAdvanceX.Size ? font.IndexAdvanceX.Data[c] : font.FallbackAdvanceX) * scale
		line_width += char_width
	}

	if text_size.x < line_width { text_size.x = line_width }

	if out_offset != nil {
		// offset allow for the possibility of sitting after a trailing \n
		out_offset^ = Vec2{line_width, text_size.y + line_height}
	}

	if line_width > 0 || text_size.y == 0.0 {
		// whereas size.y will ignore the trailing \n
		text_size.y += line_height
	}

	if remaining != nil { remaining^ = s }

	return text_size
}

// Wrapper for stb_textedit.h to edit text (our wrapper is for: statically sized buffer, single-line, wchar characters. InputText converts between UTF-8 and wchar)
// With our UTF-8 use of stb_textedit:
// - STB_TEXTEDIT_GETCHAR is nothing more than a a "GETBYTE". It's only used to compare to ascii or to copy blocks of text so we are fine.
// - One exception is the STB_TEXTEDIT_IS_SPACE feature which would expect a full char in order to handle full-width space such as 0x3000 (see CharIsBlankW).
// - ...but we don't use that feature.
Stb_STB_TEXTEDIT_STRINGLEN :: proc(obj : ^InputTextState) -> i32 { return obj.TextLen }
Stb_STB_TEXTEDIT_GETCHAR :: proc(obj : ^InputTextState, idx : i32) -> u8
{
	IM_ASSERT(idx <= obj.TextLen); return obj.TextSrc[idx]
}
Stb_STB_TEXTEDIT_GETWIDTH :: proc(obj : ^InputTextState, line_start_idx : i32, char_idx : i32) -> f32
{
	c : u32; TextCharFromUtf8(&c, obj.TextSrc[line_start_idx + char_idx:], obj.TextSrc[obj.TextLen:]); if cast(Wchar) c == '\n' { return IMSTB_TEXTEDIT_GETWIDTH_NEWLINE }; g : ^Context = obj.Ctx; return GetCharAdvance(g.Font, cast(Wchar) c) * g.FontScale
}
STB_TEXTEDIT_NEWLINE : u8 = '\n'
Stb_STB_TEXTEDIT_LAYOUTROW :: proc(r : ^Stb_StbTexteditRow, obj : ^InputTextState, line_start_idx : i32)
{
	text := obj.TextSrc
	text_remaining : [^]u8 = nil
	size : Vec2 = InputTextCalcTextSize(obj.Ctx, text[line_start_idx:], &text[obj.TextLen], &text_remaining, nil, true)
	r.x0 = 0.0
	r.x1 = size.x
	r.baseline_y_delta = size.y
	r.ymin = 0.0
	r.ymax = size.y
	r.num_chars = cast(i32) mem.ptr_sub(text_remaining, text[line_start_idx:]) 
}

IMSTB_TEXTEDIT_GETNEXTCHARINDEX :: Stb_IMSTB_TEXTEDIT_GETNEXTCHARINDEX_IMPL
IMSTB_TEXTEDIT_GETPREVCHARINDEX :: Stb_IMSTB_TEXTEDIT_GETPREVCHARINDEX_IMPL

Stb_IMSTB_TEXTEDIT_GETNEXTCHARINDEX_IMPL :: proc(obj : ^InputTextState, idx : i32) -> i32
{
	if idx >= obj.TextLen { return obj.TextLen + 1 }
	c : u32
	return idx + TextCharFromUtf8(&c, obj.TextSrc[idx:], &obj.TextSrc[obj.TextLen])
}

Stb_IMSTB_TEXTEDIT_GETPREVCHARINDEX_IMPL :: proc(obj : ^InputTextState, idx : i32) -> i32
{
	if idx <= 0 { return -1 }
	p := TextFindPreviousUtf8Codepoint(obj.TextSrc, obj.TextSrc[idx:])
	return cast(i32) mem.ptr_sub(p, obj.TextSrc)
}

Stb_ImCharIsSeparatorW :: proc(c : u32) -> bool
{
	separator_list := [?]u32 {
		',', 0x3001, '.', 0x3002, ';', 0xFF1B, '(', 0xFF08, ')', 0xFF09, '{', 0xFF5B, '}', 0xFF5D,
		'[', 0x300C, ']', 0x300D, '|', 0xFF5C, '!', 0xFF01, '\\', 0xFFE5, '/', 0x30FB, 0xFF0F,
		'\n', '\r',
	}
	for separator in separator_list { if c == separator { return true } }

	return false
}

Stb_is_word_boundary_from_right :: proc(obj : ^InputTextState, idx : i32) -> bool
{
	// When InputTextFlags_Password is set, we don't want actions such as CTRL+Arrow to leak the fact that underlying data are blanks or separators.
	if (obj.Flags & InputTextFlags_.InputTextFlags_Password) != {} || idx <= 0 { return false }

	curr_p := obj.TextSrc[idx:]
	prev_p := TextFindPreviousUtf8Codepoint(obj.TextSrc, curr_p)
	curr_c : u32; TextCharFromUtf8(&curr_c, curr_p, obj.TextSrc[obj.TextLen:])
	prev_c : u32; TextCharFromUtf8(&prev_c, prev_p, obj.TextSrc[obj.TextLen:])

	prev_white : bool = CharIsBlankW(prev_c)
	prev_separ : bool = Stb_ImCharIsSeparatorW(prev_c)
	curr_white : bool = CharIsBlankW(curr_c)
	curr_separ : bool = Stb_ImCharIsSeparatorW(curr_c)
	return ((prev_white || prev_separ) && !(curr_separ || curr_white)) || (curr_separ && !prev_separ)
}
Stb_is_word_boundary_from_left :: proc(obj : ^InputTextState, idx : i32) -> bool
{
	if (obj.Flags & InputTextFlags_.InputTextFlags_Password) != {} || idx <= 0 { return false }

	curr_p := obj.TextSrc[idx:]
	prev_p := TextFindPreviousUtf8Codepoint(obj.TextSrc, curr_p)
	prev_c : u32; TextCharFromUtf8(&prev_c, curr_p, obj.TextSrc[obj.TextLen:])
	curr_c : u32; TextCharFromUtf8(&curr_c, prev_p, obj.TextSrc[obj.TextLen:])

	prev_white : bool = CharIsBlankW(prev_c)
	prev_separ : bool = Stb_ImCharIsSeparatorW(prev_c)
	curr_white : bool = CharIsBlankW(curr_c)
	curr_separ : bool = Stb_ImCharIsSeparatorW(curr_c)
	return ((prev_white) && !(curr_separ || curr_white)) || (curr_separ && !prev_separ)
}
Stb_STB_TEXTEDIT_MOVEWORDLEFT_IMPL :: proc(obj : ^InputTextState, idx : i32) -> i32
{
	idx := idx
	idx = IMSTB_TEXTEDIT_GETPREVCHARINDEX(obj, idx)
	for idx >= 0 && Stb_is_word_boundary_from_right(obj, idx) == false { idx = IMSTB_TEXTEDIT_GETPREVCHARINDEX(obj, idx) }

	return idx < 0 ? 0 : idx
}
Stb_STB_TEXTEDIT_MOVEWORDRIGHT_MAC :: proc(obj : ^InputTextState, idx : i32) -> i32
{
	idx := idx
	len : i32 = obj.TextLen
	idx = IMSTB_TEXTEDIT_GETNEXTCHARINDEX(obj, idx)
	for idx < len && Stb_is_word_boundary_from_left(obj, idx) == false { idx = IMSTB_TEXTEDIT_GETNEXTCHARINDEX(obj, idx) }

	return idx > len ? len : idx
}
Stb_STB_TEXTEDIT_MOVEWORDRIGHT_WIN :: proc(obj : ^InputTextState, idx : i32) -> i32
{
	idx := idx
	idx = IMSTB_TEXTEDIT_GETNEXTCHARINDEX(obj, idx)
	len : i32 = obj.TextLen
	for idx < len && Stb_is_word_boundary_from_right(obj, idx) == false { idx = IMSTB_TEXTEDIT_GETNEXTCHARINDEX(obj, idx) }

	return idx > len ? len : idx
}
Stb_STB_TEXTEDIT_MOVEWORDRIGHT_IMPL :: proc(obj : ^InputTextState, idx : i32) -> i32
{
	g : ^Context = obj.Ctx; if g.IO.ConfigMacOSXBehaviors { return Stb_STB_TEXTEDIT_MOVEWORDRIGHT_MAC(obj, idx) }
	else { return Stb_STB_TEXTEDIT_MOVEWORDRIGHT_WIN(obj, idx) }
}
STB_TEXTEDIT_MOVEWORDLEFT :: Stb_STB_TEXTEDIT_MOVEWORDLEFT_IMPL// They need to be #define for stb_textedit.h
STB_TEXTEDIT_MOVEWORDRIGHT :: Stb_STB_TEXTEDIT_MOVEWORDRIGHT_IMPL

Stb_STB_TEXTEDIT_DELETECHARS :: proc(obj : ^InputTextState, pos : i32, n : i32)
{
	// Offset remaining text (+ copy zero terminator)
	IM_ASSERT(obj.TextSrc == obj.TextA.Data)
	dst := obj.TextA.Data[pos:]
	src := obj.TextA.Data[pos + n:]
	memmove(dst, src, cast(int)(obj.TextLen - n - pos + 1))
	obj.Edited = true
	obj.TextLen -= n
}

Stb_STB_TEXTEDIT_INSERTCHARS :: proc(obj : ^InputTextState, pos : i32, new_text : []u8) -> bool
{
	is_resizable : bool = (obj.Flags & InputTextFlags_.InputTextFlags_CallbackResize) != {}
	text_len : i32 = obj.TextLen
	IM_ASSERT(pos <= text_len)

	new_text_len := cast(i32)len(new_text)

	if !is_resizable && (new_text_len + obj.TextLen + 1 > obj.BufCapacity) { return false }

	// Grow internal buffer if needed
	IM_ASSERT(obj.TextSrc == obj.TextA.Data)
	if new_text_len + text_len + 1 > obj.TextA.Size {
		if !is_resizable { return false }
		resize(&obj.TextA, text_len + Clamp(new_text_len, i32(32), Max(i32(256), new_text_len)) + 1)
		obj.TextSrc = obj.TextA.Data
	}

	text := obj.TextA.Data
	if pos != text_len { memmove(text[pos + new_text_len:], &text[pos], cast(int) (text_len - pos)) }
	memcpy(text[pos:], raw_data(new_text), cast(int) new_text_len)

	obj.Edited = true
	obj.TextLen += new_text_len
	obj.TextA.Data[obj.TextLen] = 0

	return true
}

