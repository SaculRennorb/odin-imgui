IsNamedKey :: #force_inline proc(key : Key) -> bool { return key >= Key.Key_NamedKey_BEGIN && key < Key.Key_NamedKey_END }
IsNamedKeyOrMod :: #force_inline proc(key : Key) -> bool { return (key >= Key.Key_NamedKey_BEGIN && key < Key.Key_NamedKey_END) || key == Key.Mod_Ctrl || key == Key.Mod_Shift || key == Key.Mod_Alt || key == Key.Mod_Super }
IsLegacyKey :: #force_inline proc(key : Key) -> bool { return key >= Key_LegacyNativeKey_BEGIN && key < Key_LegacyNativeKey_END }
