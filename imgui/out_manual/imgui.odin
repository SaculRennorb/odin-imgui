// Helper: SpanAllocator<>
// Facilitate storing multiple chunks into a single large block (the "arena")
// - Usage: call Reserve() N times, allocate GetArenaSizeInBytes() worth, pass it to SetArenaBasePtr(), call GetSpan() N times to retrieve the aligned ranges.
SpanAllocator :: struct($CHUNKS : i32) {
	BasePtr : [^]u8,
	CurrOff : i32,
	CurrIdx : i32,
	Offsets : [CHUNKS]i32,
	Sizes : [CHUNKS]i32,
}

SpanAllocator_init :: proc(this : ^SpanAllocator($CHUNKS)) { this^ = {} }

SpanAllocator_Reserve :: #force_inline proc(this : ^SpanAllocator($CHUNKS), n : i32, #any_int sz : uint, a : i32 = 4)
{
	IM_ASSERT(n == this.CurrIdx && n < CHUNKS); this.CurrOff = IM_MEMALIGN(this.CurrOff, a); this.Offsets[n] = this.CurrOff; this.Sizes[n] = cast(i32) sz; post_incr(&this.CurrIdx); this.CurrOff += cast(i32) sz
}

GetArenaSizeInBytes :: #force_inline proc(this : ^SpanAllocator($CHUNKS)) -> i32 { return this.CurrOff }

SetArenaBasePtr :: #force_inline proc(this : ^SpanAllocator($CHUNKS), base_ptr : rawptr) { this.BasePtr = cast(^u8) base_ptr }

GetSpanPtrBegin :: #force_inline proc(this : ^SpanAllocator($CHUNKS), n : i32) -> rawptr
{
	IM_ASSERT(n >= 0 && n < CHUNKS && this.CurrIdx == CHUNKS); return cast(rawptr) (this.BasePtr[this.Offsets[n]:])
}

GetSpanPtrEnd :: #force_inline proc(this : ^SpanAllocator($CHUNKS), n : i32) -> rawptr
{
	IM_ASSERT(n >= 0 && n < CHUNKS && this.CurrIdx == CHUNKS); return cast(rawptr) (this.BasePtr[this.Offsets[n] + this.Sizes[n]:])
}

GetSpan :: #force_inline proc(this : ^SpanAllocator($CHUNKS), n : i32, span : ^Span($T)) { set(span, cast(^T) GetSpanPtrBegin(this, n), cast(^T) GetSpanPtrEnd(this, n)) }

// Helper: Pool<>
// Basic keyed storage for contiguous instances, slow/amortized insertion, O(1) indexable, O(Log N) queries by ID over a dense/hot buffer,
// Honor constructor/destructor. Add/remove invalidate all pointers. Indexes have the same lifetime as the associated object.
PoolIdx :: i32
Pool :: struct($T : typeid) {
	Buf : Vector(T), // Contiguous data
	Map : Storage, // ID->Index
	FreeIdx : PoolIdx, // Next free idx to use
	AliveCount : PoolIdx, // Number of active/alive items (for display purpose)
}

Pool_deinit :: proc(this : ^Pool($T))
{
	deinit(&this.Buf)
	deinit(&this.Map)
	Clear(this)
}

Pool_init :: proc(this : ^Pool($T))
{
	init(&this.Buf)
	init(&this.Map)
	this.AliveCount = 0; this.FreeIdx = this.AliveCount
}

GetByKey :: proc(this : ^Pool($T), key : ID) -> ^T
{
	idx : i32 = GetInt(&this.Map, key, -1); return (idx != -1) ? &this.Buf.Data[idx] : nil
}

GetByIndex :: proc(this : ^Pool($T), n : PoolIdx) -> ^T { return &this.Buf.Data[n] }

GetIndex :: proc(this : ^Pool($T), p : ^T) -> PoolIdx
{
	IM_ASSERT(p >= this.Buf.Data && p < this.Buf.Data[this.Buf.Size:]); return cast(PoolIdx) mem.ptr_sub(p, cast(^T) this.Buf.Data)
}

GetOrAddByKey :: proc(this : ^Pool($T), key : ID) -> ^T
{
	p_idx : ^i32 = GetIntRef(&this.Map, key, -1); if p_idx^ != -1 { return &this.Buf.Data[p_idx^] }; p_idx^ = this.FreeIdx; return Add(this)
}

Pool_Contains :: proc(this : Pool($T), p : ^T) -> bool { return (p >= this.Buf.Data && p < this.Buf.Data[this.Buf.Size:]) }

Pool_Clear :: proc(this : ^Pool($T))
{
	for n : i32 = 0; n < this.Map.Data.Size; n += 1 {
		idx : i32 = this.Map.Data.Data[n].val_i; if idx != -1 { deinit(&this.Buf.Data[idx]) }
	}
	Clear(&this.Map)
	clear(&this.Buf)
	this.AliveCount = 0
	this.FreeIdx = this.AliveCount
}

Pool_Add :: proc(this : ^Pool($T)) -> ^T
{
	idx : i32 = this.FreeIdx;
	if idx == this.Buf.Size {
		resize(&this.Buf, this.Buf.Size + 1); post_incr(&this.FreeIdx)
	}
	else {
		this.FreeIdx = (cast(^i32) &this.Buf.Data[idx])^
	};
	init(&this.Buf.Data[idx])
	post_incr(&this.AliveCount)
	return &this.Buf.Data[idx]
}

Pool_Remove_0 :: proc(this : ^Pool($T), key : ID, p : ^T) { Pool_Remove_1(this, key, GetIndex(this, p)) }

Pool_Remove_1 :: proc(this : ^Pool($T), key : ID, idx : PoolIdx)
{
	deinit(&this.Buf.Data[idx]);
	(cast(^i32) &this.Buf.Data[idx])^ = this.FreeIdx;
	this.FreeIdx = idx;
	SetInt(&this.Map, key, -1);
	post_decr(&this.AliveCount)
}

Pool_Reserve :: proc(this : ^Pool($T), capacity : i32)
{
	reserve(&this.Buf, capacity); reserve(&this.Map.Data, capacity)
}

// To iterate a Pool: for (int n = 0; n < pool.GetMapSize(); n++) if (T* t = pool.TryGetMapData(n)) { ... }
// Can be avoided if you know .Remove() has never been called on the pool, or AliveCount == GetMapSize()
// Number of active/alive items in the pool (for display purpose)
GetAliveCount :: proc(this : ^Pool($T)) -> i32 { return this.AliveCount }

Pool_GetBufSize :: proc(this : ^Pool($T)) -> i32 { return this.Buf.Size }

// It is the map we need iterate to find valid items, since we don't have "alive" storage anywhere
GetMapSize :: proc(this : ^Pool($T)) -> i32 { return this.Map.Data.Size }

TryGetMapData :: proc(this : ^Pool($T), n : PoolIdx) -> ^T
{
	idx : i32 = this.Map.Data.Data[n].val_i; if idx == -1 { return nil }; return GetByIndex(this, idx)
}

// Helper: ChunkStream<>
// Build and iterate a contiguous stream of variable-sized structures.
// This is used by Settings to store persistent data while reducing allocation count.
// We store the chunk size first, and align the final size on 4 bytes boundaries.
// The tedious/zealous amount of casting is to avoid -Wcast-align warnings.
ChunkStream :: struct($T : typeid) {
	Buf : Vector(u8),
}

ChunkStream_deinit :: proc(this : ^ChunkStream($T)) { deinit(&this.Buf) }

ChunkStream_clear :: proc(this : ^ChunkStream($T)) { clear(&this.Buf) }

ChunkStream_empty :: proc(this : ^ChunkStream($T)) -> bool { return this.Buf.Size == 0 }

ChunkStream_size :: proc(this : ^ChunkStream($T)) -> i32 { return this.Buf.Size }

alloc_chunk :: proc(this : ^ChunkStream($T), sz : uint) -> ^T
{
	HDR_SZ :: 4
	sz := IM_MEMALIGN(HDR_SZ + sz, 4)
	off : i32 = this.Buf.Size
	resize(&this.Buf, off + cast(i32) sz)
	(cast(^i32) cast(rawptr) (&this.Buf.Data[off]))^ = cast(i32) sz
	return cast(^T) cast(rawptr) (&this.Buf.Data[off + cast(i32) HDR_SZ])
}

ChunkStream_begin :: proc(this : ^ChunkStream($T)) -> ^T
{
	HDR_SZ :: 4
	if this.Buf.Data == nil { return nil }
	return cast(^T) cast(rawptr) (&this.Buf.Data[HDR_SZ])
}

next_chunk :: proc(this : ^ChunkStream($T), p : ^T) -> ^T
{
	HDR_SZ : uint : 4
	IM_ASSERT(p >= begin(this) && p < end(this));
	p := cast(^T) cast(rawptr) (mem.ptr_offset(cast(^u8)p, chunk_size(this, p)))
	if p == cast(^T) cast(rawptr) (mem.ptr_offset(cast(^u8) end(this), HDR_SZ)) { return nil }
	IM_ASSERT(p < end(this))
	return p
}

chunk_size :: proc(this : ^ChunkStream($T), p : ^T) -> i32 { return (cast([^]i32) p)[-1] }

ChunkStream_end :: proc(this : ^ChunkStream($T)) -> ^T { return cast(^T) &this.Buf.Data[this.Buf.Size] }

offset_from_ptr :: proc(this : ^ChunkStream($T), p : ^T) -> i32
{
	IM_ASSERT(p >= begin(this) && p < end(this)); off : int = mem.ptr_sub(cast(^u8) p, cast(^u8)this.Buf.Data); return cast(i32) off
}

ptr_from_offset :: proc(this : ^ChunkStream($T), off : i32) -> ^T
{
	IM_ASSERT(off >= 4 && off < this.Buf.Size); return cast(^T) &this.Buf.Data[off]
}

ChunkStream_swap :: proc(this : ^ChunkStream($T), rhs : ^ChunkStream(T)) { swap(&rhs.Buf, &this.Buf) }

ChunkStream_init :: proc(this : ^ChunkStream($T)) { init(&this.Buf) }

