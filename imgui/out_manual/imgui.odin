// (not recommended) set current window size - call within Begin()/End(). set to Vec2{0, 0} to force an auto-fit. prefer using SetNextWindowSize(), as this may incur tearing and minor side-effects.
// set named window size. set axis to 0.0f to force an auto-fit on this axis.
SetWindowSize_0 :: proc(window : ^Window, size : Vec2, cond : Cond)
{
	// Test condition (NB: bit 0 is always true) and clear flags for next time
	if cond != {} && (window.SetWindowSizeAllowFlags & cond) == {} { return }

	IM_ASSERT(cond == {} || IsPowerOfTwo(cast(u32)cond)); // Make sure the user doesn't attempt to combine multiple condition flags.
	window.SetWindowSizeAllowFlags &= cast(Cond)~i32(Cond_.Cond_Once | Cond_.Cond_FirstUseEver | Cond_.Cond_Appearing)

	// Enable auto-fit (not done in BeginChild() path unless appearing or combined with ChildFlags_AlwaysAutoResize)
	if (window.Flags & WindowFlags_.WindowFlags_ChildWindow) == {} || window.Appearing || (window.ChildFlags & ChildFlags_.ChildFlags_AlwaysAutoResize) != {} { window.AutoFitFramesX = (size.x <= 0.0) ? 2 : 0 }
	if (window.Flags & WindowFlags_.WindowFlags_ChildWindow) == {} || window.Appearing || (window.ChildFlags & ChildFlags_.ChildFlags_AlwaysAutoResize) != {} { window.AutoFitFramesY = (size.y <= 0.0) ? 2 : 0 }

	// Set
	old_size : Vec2 = window.SizeFull
	if size.x <= 0.0 { window.AutoFitOnlyGrows = false }
	else { window.SizeFull.x = IM_TRUNC(size.x) }
	if size.y <= 0.0 { window.AutoFitOnlyGrows = false }
	else { window.SizeFull.y = IM_TRUNC(size.y) }
	if old_size.x != window.SizeFull.x || old_size.y != window.SizeFull.y { MarkIniSettingsDirty(window) }
}

