// [DEBUG] Display contents of TabBar
DebugNodeTabBar :: proc(tab_bar : ^TabBar, label : string)
{
	// Standalone tab bars (not associated to docking/windows functionality) currently hold no discernible strings.
	buf : [256]u8
	p := raw_data(&buf)
	buf_end := raw_data(&buf)[len(buf):]
	is_active : bool = (tab_bar.PrevFrameVisible >= GetFrameCount() - 2)
	p = p[FormatString(slice_from_se(p, buf_end), "%s 0x%08X (%d tabs)%s  {", label, tab_bar.ID, tab_bar.Tabs.Size, is_active ? "" : " *Inactive*"):]
	for tab_n : i32 = 0; tab_n < Min(tab_bar.Tabs.Size, 3); tab_n += 1 {
		tab : ^TabItem = &tab_bar.Tabs.Data[tab_n]
		p = p[FormatString(slice_from_se(p, buf_end), "%s'%s'", tab_n > 0 ? ", " : "", TabBarGetTabName(tab_bar, tab)):]
	}

	p = p[FormatString(slice_from_se(p, buf_end), (tab_bar.Tabs.Size > 3) ? " ... }" : " } "):]
	if !is_active { PushStyleColor(Col_.Col_Text, GetStyleColorVec4(Col_.Col_TextDisabled)) }
	open : bool = TreeNode(label, "%s", buf)
	if !is_active { PopStyleColor() }
	if is_active && IsItemHovered() {
		draw_list : ^DrawList = GetForegroundDrawList()
		AddRect(draw_list, tab_bar.BarRect.Min, tab_bar.BarRect.Max, IM_COL32(255, 255, 0, 255))
		AddLine(draw_list, Vec2{tab_bar.ScrollingRectMinX, tab_bar.BarRect.Min.y}, Vec2{tab_bar.ScrollingRectMinX, tab_bar.BarRect.Max.y}, IM_COL32(0, 255, 0, 255))
		AddLine(draw_list, Vec2{tab_bar.ScrollingRectMaxX, tab_bar.BarRect.Min.y}, Vec2{tab_bar.ScrollingRectMaxX, tab_bar.BarRect.Max.y}, IM_COL32(0, 255, 0, 255))
	}
	if open {
		for tab_n : i32 = 0; tab_n < tab_bar.Tabs.Size; tab_n += 1 {
			tab : ^TabItem = &tab_bar.Tabs.Data[tab_n]
			PushID(tab)
			if SmallButton("<") { TabBarQueueReorder(tab_bar, tab, -1) }; SameLine(0, 2)
			if SmallButton(">") { TabBarQueueReorder(tab_bar, tab, +1) }; SameLine()
			Text("%02d%c Tab 0x%08X '%s' Offset: %.2f, Width: %.2f/%.2f", tab_n, (tab.ID == tab_bar.SelectedTabId) ? '*' : ' ', tab.ID, TabBarGetTabName(tab_bar, tab), tab.Offset, tab.Width, tab.ContentWidth)
			PopID()
		}

		TreePop()
	}
}

