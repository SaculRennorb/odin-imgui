Checkbox :: proc(label : string, v : ^bool) -> bool
{
	window : ^Window = GetCurrentWindow()
	if window.SkipItems { return false }

	g : ^Context = GImGui
	style : ^Style = &g.Style
	id : ID = GetID(window, label)
	label_size : Vec2 = CalcTextSize(label, true)

	square_sz : f32 = GetFrameHeight()
	pos : Vec2 = window.DC.CursorPos
	total_bb : Rect; init(&total_bb, pos, pos + Vec2{square_sz + (label_size.x > 0.0 ? style.ItemInnerSpacing.x + label_size.x : 0.0), label_size.y + style.FramePadding.y * 2.0})
	ItemSize(total_bb, style.FramePadding.y)
	is_visible : bool = ItemAdd(total_bb, id)
	is_multi_select : bool = (g.LastItemData.ItemFlags & cast(ItemFlags) ItemFlagsPrivate_.ItemFlags_IsMultiSelect) != {}
	if !is_visible { if !is_multi_select || !g.BoxSelectState.UnclipMode || !Overlaps(g.BoxSelectState.UnclipRect, total_bb) {
	// Extra layer of "no logic clip" for box-select support
	when IMGUI_ENABLE_TEST_ENGINE {
		if(g.TestEngineHookItems) {
			TestEngineHook_ItemInfo(g, id, label, g.LastItemData.StatusFlags | ItemStatusFlags_.ItemStatusFlags_Checkable | (v^ ? ItemStatusFlags_.ItemStatusFlags_Checked : {}))
		}
	}
	return false
} }

	// Range-Selection/Multi-selection support (header)
	checked : bool = v^
	if is_multi_select { MultiSelectItemHeader(id, &checked, nil) }

	hovered : bool; held : bool
	pressed : bool = ButtonBehavior(total_bb, id, &hovered, &held)

	// Range-Selection/Multi-selection support (footer)
	if is_multi_select { MultiSelectItemFooter(id, &checked, &pressed) }
	else if pressed { checked = !checked }

	if v^ != checked {
		v^ = checked
		pressed = true; // return value
		MarkItemEdited(id)
	}

	check_bb : Rect; init(&check_bb, pos, pos + Vec2{square_sz, square_sz})
	mixed_value : bool = (g.LastItemData.ItemFlags & cast(ItemFlags) ItemFlagsPrivate_.ItemFlags_MixedValue) != {}
	if is_visible {
		RenderNavCursor(total_bb, id)
		RenderFrame(check_bb.Min, check_bb.Max, GetColorU32((held && hovered) ? Col_.Col_FrameBgActive : hovered ? Col_.Col_FrameBgHovered : Col_.Col_FrameBg), true, style.FrameRounding)
		check_col : U32 = GetColorU32(Col_.Col_CheckMark)
		if mixed_value {
			// Undocumented tristate/mixed/indeterminate checkbox (#2644)
			// This may seem awkwardly designed because the aim is to make ItemFlags_MixedValue supported by all widgets (not just checkbox)
			pad := Vec2{ Max(f32(1.0), IM_TRUNC(square_sz / 3.6)), Max(f32(1.0), IM_TRUNC(square_sz / 3.6)) }
			AddRectFilled(window.DrawList, check_bb.Min + pad, check_bb.Max - pad, check_col, style.FrameRounding)
		}
		else if v^ {
			pad : f32 = Max(f32(1.0), IM_TRUNC(square_sz / 6.0))
			RenderCheckMark(window.DrawList, check_bb.Min + Vec2{pad, pad}, check_col, square_sz - pad * 2.0)
		}
	}
	label_pos : Vec2 = Vec2{check_bb.Max.x + style.ItemInnerSpacing.x, check_bb.Min.y + style.FramePadding.y}
	if g.LogEnabled { LogRenderedText(&label_pos, mixed_value ? "[~]" : v^ ? "[x]" : "[ ]") }
	if is_visible && label_size.x > 0.0 { RenderText(label_pos, label) }

	when IMGUI_ENABLE_TEST_ENGINE {
		if(g.TestEngineHookItems) { TestEngineHook_ItemInfo(g, id, label, g.LastItemData.StatusFlags | ItemStatusFlags_.ItemStatusFlags_Checkable | (v^ ? ItemStatusFlags_.ItemStatusFlags_Checked : 0)) }

	}
	return pressed
}

CheckboxFlagsT :: proc(label : string, flags : ^$T, flags_value : T) -> bool
{
	all_on : bool = (flags^ & flags_value) == flags_value
	any_on : bool = (flags^ & flags_value) != {}
	pressed : bool
	if !all_on && any_on {
		g : ^Context = GImGui
		g.NextItemData.ItemFlags |= cast(ItemFlags_) ItemFlagsPrivate_.ItemFlags_MixedValue
		pressed = Checkbox(label, &all_on)
	}
	else {
		pressed = Checkbox(label, &all_on)

	}
	if pressed {
		if all_on { flags^ |= flags_value }
		else { flags^ &= cast(T)~cast(intrinsics.type_core_type(T))flags_value }
	}
	return pressed
}

CheckboxFlags_i :: proc(label : string, flags : ^i32, flags_value : i32) -> bool
{
	return CheckboxFlagsT(label, flags, flags_value)
}

CheckboxFlags_u :: proc(label : string, flags : ^u32, flags_value : u32) -> bool
