	IM_ASSERT(button >= MouseButton(0) && int(button) < len(g.IO.MouseDown))
	return g.IO.MouseDown[button] && TestKeyOwner(MouseButtonToKey(button), KeyOwner_Any)// should be same as IsKeyDown(MouseButtonToKey(button), KeyOwner_Any), but this allows legacy code hijacking the io.Mousedown[] array.
}

