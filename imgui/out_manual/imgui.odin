// Display line, search for 0xXXXXXXXX identifiers and call DebugLocateItemOnHover() when hovered.
DebugTextUnformattedWithLocateItem :: proc(line_begin : [^]u8, line_end : ^u8)
{
	TextUnformatted(string_from_se(line_begin, line_end))
	if !IsItemHovered(HoveredFlags_.HoveredFlags_AllowWhenBlockedByPopup | HoveredFlags_.HoveredFlags_AllowWhenBlockedByActiveItem) { return }
	g : ^Context = GImGui
	text_rect : Rect = g.LastItemData.Rect
	for p := line_begin; cast(^u8)p <= mem.ptr_offset(line_end, -10); p = p[1:] {
		id : i64 = 0
		o := 0
		if p[0] != '0' || (p[1] != 'x' && p[1] != 'X') || parse_int(string_from_se(p[2:], line_end), &o, &id, 16) != true || CharIsXdigitA(p[10]) { continue }
		p0 : Vec2 = CalcTextSize(string_from_se(line_begin, p))
		p1 : Vec2 = CalcTextSize(string_from_se(p, &p[10]))
		g.LastItemData.Rect = Rect{text_rect.Min + Vec2{p0.x, 0.0}, text_rect.Min + Vec2{p0.x + p1.x, p1.y}}
		if IsMouseHoveringRect(g.LastItemData.Rect.Min, g.LastItemData.Rect.Max, true) { DebugLocateItemOnHover(ID(id)) }
		p = p[10:]
	}
}

