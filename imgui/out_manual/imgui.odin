// - Min/Max/Clamp/Lerp/Swap are used by widgets which support variety of types: signed/unsigned int/long long float/double
// (Exceptionally using templates here but we could also redefine them for those types)
Min :: proc{ Min_b, Min_v2 }
Max :: proc{ Max_b, Max_v2 }
Clamp :: proc { Clamp_b, Clamp_v2 }
Clamp_b :: #force_inline proc(v : $T, mn : T, mx : T) -> T where !intrinsics.type_is_array(T) { return (v < mn) ? mn : (v > mx) ? mx : v }
Lerp :: proc { Lerp_b, Lerp_v2_f, Lerp_v2_v2, Lerp_v4 }
Lerp_b :: #force_inline proc(a : $T, b : T, t : f32) -> T { return cast(T) (a + (b - a) * cast(T) t) }
Swap :: #force_inline proc(a : ^$T, b : ^T) { tmp : T = a^; a^ = b^; b^ = tmp }
AddClampOverflow :: #force_inline proc(a : $T, b : T, mn : T, mx : T) -> T
{
	if b < 0 && (a < mn - b) { return mn }; if b > 0 && (a > mx - b) { return mx }; return a + b
}
SubClampOverflow :: #force_inline proc(a : $T, b : T, mn : T, mx : T) -> T
{
	if b > 0 && (a < mn + b) { return mn }; if b < 0 && (a > mx + b) { return mx }; return a - b
}
// - Min/Max/Clamp/Lerp/Swap are used by widgets which support variety of types: signed/unsigned int/long long float/double
// (Exceptionally using templates here but we could also redefine them for those types)
// - Misc maths helpers
Min_b ::  #force_inline proc "contextless" (lhs, rhs : $T) -> T where T != Vec2 { return lhs < rhs ? lhs : rhs }
Max_b ::  #force_inline proc "contextless" (lhs, rhs : $T) -> T where T != Vec2 { return lhs >= rhs ? lhs : rhs }
Min_v2 :: #force_inline proc "contextless" (#no_broadcast lhs, #no_broadcast rhs : Vec2) -> Vec2 { return Vec2{lhs.x < rhs.x ? lhs.x : rhs.x, lhs.y < rhs.y ? lhs.y : rhs.y} }
Max_v2 :: #force_inline proc "contextless" (#no_broadcast lhs, #no_broadcast rhs : Vec2) -> Vec2 { return Vec2{lhs.x >= rhs.x ? lhs.x : rhs.x, lhs.y >= rhs.y ? lhs.y : rhs.y} }
Clamp_v2 :: #force_inline proc "contextless" (#no_broadcast v, #no_broadcast mn, #no_broadcast mx : Vec2) -> Vec2 { return Vec2{(v.x < mn.x) ? mn.x : (v.x > mx.x) ? mx.x : v.x, (v.y < mn.y) ? mn.y : (v.y > mx.y) ? mx.y : v.y} }
Lerp_v2_f :: #force_inline proc "contextless" (#no_broadcast a, #no_broadcast b : Vec2, t : f32) -> Vec2 { return Vec2{a.x + (b.x - a.x) * t, a.y + (b.y - a.y) * t} }
Lerp_v2_v2 :: #force_inline proc "contextless" (#no_broadcast a, #no_broadcast b, #no_broadcast t : Vec2) -> Vec2 { return Vec2{a.x + (b.x - a.x) * t.x, a.y + (b.y - a.y) * t.y} }
Lerp_v4 :: #force_inline proc "contextless" (#no_broadcast a, #no_broadcast b : Vec4, t : f32) -> Vec4 { return Vec4{a.x + (b.x - a.x) * t, a.y + (b.y - a.y) * t, a.z + (b.z - a.z) * t, a.w + (b.w - a.w) * t} }
Saturate :: #force_inline proc "contextless" (f : f32) -> f32 { return (f < 0.0) ? 0.0 : (f > 1.0) ? 1.0 : f }
LengthSqr :: proc { LengthSqr_v2, LengthSqr_v4 }
LengthSqr_v2 :: #force_inline proc "contextless" (lhs : Vec2) -> f32 { return (lhs.x * lhs.x) + (lhs.y * lhs.y) }
LengthSqr_v4 :: #force_inline proc "contextless" (lhs : Vec4) -> f32 { return (lhs.x * lhs.x) + (lhs.y * lhs.y) + (lhs.z * lhs.z) + (lhs.w * lhs.w) }
InvLength :: #force_inline proc "contextless" (lhs : Vec2, fail_value : f32) -> f32
{
	d : f32 = (lhs.x * lhs.x) + (lhs.y * lhs.y); if d > 0.0 { return Rsqrt(d) }; return fail_value
}
Trunc :: proc { Trunc_b, Trunc_v2 }
Trunc_b :: #force_inline proc "contextless" (f : f32) -> f32 { return cast(f32) cast(i32) (f) }
Trunc_v2 :: #force_inline proc "contextless" (v : Vec2) -> Vec2 { return Vec2{cast(f32) cast(i32) (v.x), cast(f32) cast(i32) (v.y)} }
// Decent replacement for floorf()
Floor :: proc { Floor_b, Floor_v2 }
Floor_b :: #force_inline proc "contextless" (f : f32) -> f32 { return cast(f32) ((f >= 0 || cast(f32) cast(i32) f == f) ? cast(i32) f : cast(i32) f - 1) }// Decent replacement for floorf()
Floor_v2 :: #force_inline proc "contextless" (v : Vec2) -> Vec2 { return Vec2{Floor(v.x), Floor(v.y)} }
ModPositive :: #force_inline proc "contextless" (a : i32, b : i32) -> i32 { return (a + b) % b }
Dot :: #force_inline proc "contextless" (a  : Vec2, b : Vec2) -> f32 { return a.x * b.x + a.y * b.y }
Rotate :: #force_inline proc "contextless" (v : Vec2, cos_a : f32, sin_a : f32) -> Vec2 { return Vec2{v.x * cos_a - v.y * sin_a, v.x * sin_a + v.y * cos_a} }
LinearSweep :: #force_inline proc "contextless" (current : f32, target : f32, speed : f32) -> f32
{
	if current < target { return Min(current + speed, target) }; if current > target { return Max(current - speed, target) }; return current
}
LinearRemapClamp :: #force_inline proc "contextless" (s0 : f32, s1 : f32, d0 : f32, d1 : f32, x : f32) -> f32 { return Saturate((x - s0) / (s1 - s0)) * (d1 - d0) + d0 }
Mul :: #force_inline proc "contextless" (lhs : Vec2, rhs : Vec2) -> Vec2 { return Vec2{lhs.x * rhs.x, lhs.y * rhs.y} }
IsFloatAboveGuaranteedIntegerPrecision :: #force_inline proc "contextless" (f : f32) -> bool { return f <= -16777216 || f >= 16777216 }
ExponentialMovingAverage :: #force_inline proc "contextless"(avg : f32, sample : f32, n : f32) -> f32
{
	avg := avg; avg -= avg / n; avg += sample / n; return avg
}


