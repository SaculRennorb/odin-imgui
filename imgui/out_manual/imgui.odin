GetColorU32_0 :: proc(idx : Col, alpha_mul : f32 = 1) -> U32
{
	style : ^Style = &GImGui.Style
	c : Vec4 = style.Colors[idx]
	c.w *= style.Alpha * alpha_mul
	return ColorConvertFloat4ToU32(c)
}

GetColorU32_1 :: proc(col : Vec4) -> U32
{
	style : ^Style = &GImGui.Style
	c : Vec4 = col
	c.w *= style.Alpha
	return ColorConvertFloat4ToU32(c)
}

GetStyleColorVec4 :: proc(idx : Col) -> Vec4
{
	style : ^Style = &GImGui.Style
	return style.Colors[idx]
}

GetColorU32_2 :: proc(col : U32, alpha_mul : f32 = 1) -> U32
{
	style : ^Style = &GImGui.Style
	alpha_mul := alpha_mul * style.Alpha
	if alpha_mul >= 1.0 { return col }
	a : U32 = (col & IM_COL32_A_MASK) >> IM_COL32_A_SHIFT
	a = cast(U32) (cast(f32) a * alpha_mul); // We don't need to clamp 0..255 because alpha is in 0..1 range.
	return (col & ~U32(IM_COL32_A_MASK)) | (a << IM_COL32_A_SHIFT)
}

// FIXME: This may incur a round-trip (if the end user got their data from a float4) but eventually we aim to store the in-flight colors as U32
PushStyleColor_0 :: proc(idx : Col, col : U32)
{
	g : ^Context = GImGui
	backup : ColorMod
	backup.Col = idx
	backup.BackupValue = g.Style.Colors[idx]
	push_back(&g.ColorStack, backup)
	if g.DebugFlashStyleColorIdx != idx { g.Style.Colors[idx] = ColorConvertU32ToFloat4(col) }
}

PushStyleColor_1 :: proc(idx : Col, col : Vec4)
{
	g : ^Context = GImGui
	backup : ColorMod
	backup.Col = idx
	backup.BackupValue = g.Style.Colors[idx]
	push_back(&g.ColorStack, backup)
	if g.DebugFlashStyleColorIdx != idx { g.Style.Colors[idx] = col }
}

PopStyleColor :: proc(count : i32 = 1)
{
	g : ^Context = GImGui
	count := count
	if g.ColorStack.Size < count {
		IM_ASSERT_USER_ERROR(false, "Calling PopStyleColor() too many times!")
		count = g.ColorStack.Size
	}
	for count > 0 {
		backup : ^ColorMod = back(&g.ColorStack)
		g.Style.Colors[backup.Col] = backup.BackupValue
		pop_back(&g.ColorStack)
		post_decr(&count)
	}
}

