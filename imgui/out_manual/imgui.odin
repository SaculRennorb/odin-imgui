IsDataType :: proc(this : ^Payload, type : string) -> bool {
	return this.DataFrameCount != -1 && type == string_from_slice(this.DataType[:])
}

IsPreview :: proc(this : ^Payload) -> bool { return this.Preview }

IsDelivery :: proc(this : ^Payload) -> bool { return this.Delivery }

