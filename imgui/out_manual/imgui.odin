// pop from the ID stack.
PopID :: proc()
{
	window : ^Window = GImGui.CurrentWindow
	if window.IDStack.Size <= 1 {
		IM_ASSERT_USER_ERROR(false, "Calling PopID() too many times!")
		return
	}
	pop_back(&window.IDStack)
}

