// Helper: Parse and apply text filters. In format "aaaaa[,bbbb][,ccccc]"
TextFilter_init :: proc(this : ^TextFilter, default_filter : string = "")
{
	init(&this.Filters)
	this.InputBuf[0] = 0
	this.CountGrep = 0
	if default_filter != "" {
		Strncpy(raw_data(&this.InputBuf), raw_data(default_filter), cast(uint) IM_ARRAYSIZE(this.InputBuf))
		TextFilter_Build(this)
	}
}

// Helper calling InputText+Build
TextFilter_Draw :: proc(this : ^TextFilter, label : string = "Filter (inc,-exc)", width : f32 = 0.0) -> bool
{
	if width != 0.0 { SetNextItemWidth(width) }
	value_changed : bool = InputText(label, this.InputBuf[:])
	if value_changed { TextFilter_Build(this) }
	return value_changed
}

split :: proc(this : ^TextFilter_ImGuiTextRange, separator : u8, out : ^Vector(TextFilter_ImGuiTextRange))
{
	resize(out, 0)
	wb : [^]u8 = this.b
	we : ^u8 = wb
	for we < this.e {
		if we^ == separator {
			push_back(out, TextFilter_ImGuiTextRange{wb, we})
			wb = mem.ptr_offset(we, 1)
		}
		post_incr(&we)
	}
	if wb != we { push_back(out, TextFilter_ImGuiTextRange{wb, we}) }
}

TextFilter_Build :: proc(this : ^TextFilter)
{
	resize(&this.Filters, 0)
	input_range : TextFilter_ImGuiTextRange; init(&input_range, raw_data(&this.InputBuf), &this.InputBuf[strlen(raw_data(&this.InputBuf))])
	split(&input_range, ',', &this.Filters)

	this.CountGrep = 0
	for &f in this.Filters.Data[:this.Filters.Size] {
		for f.b < f.e && CharIsBlankA(f.b[0]) { post_incr(&f.b) }

		for f.e > f.b && CharIsBlankA(mem.ptr_offset(f.e, -1)^) { post_decr(&f.e) }

		if empty(&f) { continue }
		if f.b[0] != '-' { this.CountGrep += 1 }
	}
}

TextFilter_PassFilter :: proc(this : ^TextFilter, text : string) -> bool
{
	if this.Filters.Size == 0 { return true }

	for f in this.Filters.Data[:this.Filters.Size] {
		if f.b == f.e { continue }
		if f.b[0] == '-' {
			// Subtract
			if Stristr(transmute([]u8) text, slice_from_se(f.b[1:], f.e)) != nil { return false }
		}
		else {
			// Grep
			if Stristr(transmute([]u8) text, slice_from_se(f.b, f.e)) != nil { return true }
		}
	}

	// Implicit * grep
	if this.CountGrep == 0 { return true }

	return false
}

