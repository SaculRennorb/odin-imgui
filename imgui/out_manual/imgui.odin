InputInt :: proc(label : string, v : ^i32, step : i32 = 1, step_fast : i32 = 100, flags : InputTextFlags = {}) -> bool
{
	step, step_fast := step, step_fast
	// Hexadecimal input provided as a convenience but the flag name is awkward. Typically you'd use InputText() to parse your own data, if you want to handle prefixes.
	format : string = (flags & InputTextFlags_.InputTextFlags_CharsHexadecimal) != {} ? "%08X" : "%d"
	return InputScalar(label, DataType_.DataType_S32, cast(rawptr) v, cast(rawptr) (step > 0 ? &step : nil), cast(rawptr) (step_fast > 0 ? &step_fast : nil), format, flags)
}

