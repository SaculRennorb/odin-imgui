ColorEdit3 :: proc(label : string, col : ^[3]f32, flags : ColorEditFlags = {}) -> bool
{
	return ColorEdit4(label, cast(^[4]f32) col, flags | ColorEditFlags_.ColorEditFlags_NoAlpha)
}

ColorEditRestoreH :: proc(col : ^[3]f32, H : ^f32)
{
	g : ^Context = GImGui
	IM_ASSERT(g.ColorEditCurrentID != 0)
	if g.ColorEditSavedID != g.ColorEditCurrentID || g.ColorEditSavedColor != ColorConvertFloat4ToU32(Vec4{col[0], col[1], col[2], 0}) { return }
	H^ = g.ColorEditSavedHue
}

// ColorEdit supports RGB and HSV inputs. In case of RGB input resulting color may have undefined hue and/or saturation.
// Since widget displays both RGB and HSV values we must preserve hue and saturation to prevent these values resetting.
ColorEditRestoreHS :: proc(col : ^[3]f32, H : ^f32, S : ^f32, V : ^f32)
{
	g : ^Context = GImGui
	IM_ASSERT(g.ColorEditCurrentID != 0)
	if g.ColorEditSavedID != g.ColorEditCurrentID || g.ColorEditSavedColor != ColorConvertFloat4ToU32(Vec4{col[0], col[1], col[2], 0}) { return }

	// When S == 0, H is undefined.
	// When H == 1 it wraps around to 0.
	if S^ == 0.0 || (H^ == 0.0 && g.ColorEditSavedHue == 1) { H^ = g.ColorEditSavedHue }

	// When V == 0, S is undefined.
	if V^ == 0.0 { S^ = g.ColorEditSavedSat }
}

// Edit colors components (each component in 0.0f..1.0f range).
// See enum ColorEditFlags_ for available options. e.g. Only access 3 floats if ColorEditFlags_NoAlpha flag is set.
// With typical options: Left-click on color square to open color picker. Right-click to open option menu. CTRL-Click over input fields to edit them and TAB to go to next item.
ColorEdit4 :: proc(label : string, col : ^[4]f32, flags : ColorEditFlags) -> bool
{
	window : ^Window = GetCurrentWindow()
	if window.SkipItems { return false }

	g : ^Context = GImGui
	style : ^Style = &g.Style
	square_sz : f32 = GetFrameHeight()
	label_display_end := FindRenderedTextEnd(label)
	w_full : f32 = CalcItemWidth()
	ClearFlags(&g.NextItemData)

	BeginGroup()
	PushID(label)
	set_current_color_edit_id : bool = (g.ColorEditCurrentID == 0)
	if set_current_color_edit_id { g.ColorEditCurrentID = back(&window.IDStack)^ }

	flags := flags
	// If we're not showing any slider there's no point in doing any HSV conversions
	flags_untouched : ColorEditFlags = flags
	if (flags & ColorEditFlags_.ColorEditFlags_NoInputs) != {} { flags = (flags & ColorEditFlags(~cast(i32)ColorEditFlags_.ColorEditFlags_DisplayMask_)) | ColorEditFlags_.ColorEditFlags_DisplayRGB | ColorEditFlags_.ColorEditFlags_NoOptions }

	// Context menu: display and modify options (before defaults are applied)
	if (flags & ColorEditFlags_.ColorEditFlags_NoOptions) == {} { ColorEditOptionsPopup(col, flags) }

	// Read stored options
	if (flags & ColorEditFlags_.ColorEditFlags_DisplayMask_) == {} { flags |= (g.ColorEditOptions & ColorEditFlags_.ColorEditFlags_DisplayMask_) }
	if (flags & ColorEditFlags_.ColorEditFlags_DataTypeMask_) == {} { flags |= (g.ColorEditOptions & ColorEditFlags_.ColorEditFlags_DataTypeMask_) }
	if (flags & ColorEditFlags_.ColorEditFlags_PickerMask_) == {} { flags |= (g.ColorEditOptions & ColorEditFlags_.ColorEditFlags_PickerMask_) }
	if (flags & ColorEditFlags_.ColorEditFlags_InputMask_) == {} { flags |= (g.ColorEditOptions & ColorEditFlags_.ColorEditFlags_InputMask_) }
	flags |= (g.ColorEditOptions & cast(ColorEditFlags)~i32(ColorEditFlags_.ColorEditFlags_DisplayMask_ | ColorEditFlags_.ColorEditFlags_DataTypeMask_ | ColorEditFlags_.ColorEditFlags_PickerMask_ | ColorEditFlags_.ColorEditFlags_InputMask_))
	IM_ASSERT(IsPowerOfTwo(u32(flags & ColorEditFlags_.ColorEditFlags_DisplayMask_))); // Check that only 1 is selected
	IM_ASSERT(IsPowerOfTwo(u32(flags & ColorEditFlags_.ColorEditFlags_InputMask_))); // Check that only 1 is selected

	alpha : bool = (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) == {}
	hdr : bool = (flags & ColorEditFlags_.ColorEditFlags_HDR) != {}
	components : i32 = alpha ? 4 : 3
	w_button : f32 = (flags & ColorEditFlags_.ColorEditFlags_NoSmallPreview) != {} ? 0.0 : (square_sz + style.ItemInnerSpacing.x)
	w_inputs : f32 = Max(w_full - w_button, 1.0)
	w_full = w_inputs + w_button

	// Convert to the formats we need
	f : [4]f32 = {col[0], col[1], col[2], alpha ? col[3] : 1.0}
	if (flags & ColorEditFlags_.ColorEditFlags_InputHSV) != {} && (flags & ColorEditFlags_.ColorEditFlags_DisplayRGB) != {} { ColorConvertHSVtoRGB(f[0], f[1], f[2], &f[0], &f[1], &f[2]) }
	else if (flags & ColorEditFlags_.ColorEditFlags_InputRGB) != {} && (flags & ColorEditFlags_.ColorEditFlags_DisplayHSV) != {} {
		// Hue is lost when converting from grayscale rgb (saturation=0). Restore it.
		ColorConvertRGBtoHSV(f[0], f[1], f[2], &f[0], &f[1], &f[2])
		ColorEditRestoreHS(cast(^[3]f32)col, &f[0], &f[1], &f[2])
	}
	i : [4]i32 = {IM_F32_TO_INT8_UNBOUND(f[0]), IM_F32_TO_INT8_UNBOUND(f[1]), IM_F32_TO_INT8_UNBOUND(f[2]), IM_F32_TO_INT8_UNBOUND(f[3])}

	value_changed : bool = false
	value_changed_as_float : bool = false

	pos : Vec2 = window.DC.CursorPos
	inputs_offset_x : f32 = (style.ColorButtonPosition == Dir.Dir_Left) ? w_button : 0.0
	window.DC.CursorPos.x = pos.x + inputs_offset_x

	if (flags & (ColorEditFlags_.ColorEditFlags_DisplayRGB | ColorEditFlags_.ColorEditFlags_DisplayHSV)) != {} && (flags & ColorEditFlags_.ColorEditFlags_NoInputs) == {} {
		// RGB/HSV 0..255 Sliders
		w_items : f32 = w_inputs - style.ItemInnerSpacing.x * f32(components - 1)

		hide_prefix : bool = (IM_TRUNC(w_items / f32(components)) <= CalcTextSize((flags & ColorEditFlags_.ColorEditFlags_Float) != {} ? "M:0.000" : "M:000").x)
		ids := [?]string {"##X", "##Y", "##Z", "##W"}
		fmt_table_int := [3][4]string {
			{"%3d", "%3d", "%3d", "%3d"}, // Short display
			{"R:%3d", "G:%3d", "B:%3d", "A:%3d"}, // Long display for RGBA
			{"H:%3d", "S:%3d", "V:%3d", "A:%3d"}, // Long display for HSVA
		}
		fmt_table_float := [3][4]string {
			{"%0.3f", "%0.3f", "%0.3f", "%0.3f"}, // Short display
			{"R:%0.3f", "G:%0.3f", "B:%0.3f", "A:%0.3f"}, // Long display for RGBA
			{"H:%0.3f", "S:%0.3f", "V:%0.3f", "A:%0.3f"}, // Long display for HSVA
		}
		fmt_idx : i32 = hide_prefix ? 0 : (flags & ColorEditFlags_.ColorEditFlags_DisplayHSV) != {} ? 2 : 1

		prev_split : f32 = 0.0
		for n : i32 = 0; n < components; n += 1 {
			if n > 0 { SameLine(0, style.ItemInnerSpacing.x) }
			next_split : f32 = IM_TRUNC(w_items * f32(n + 1) / f32(components))
			SetNextItemWidth(Max(next_split - prev_split, 1.0))
			prev_split = next_split

			// FIXME: When ColorEditFlags_HDR flag is passed HS values snap in weird ways when SV values go below 0.
			if (flags & ColorEditFlags_.ColorEditFlags_Float) != {} {
				value_changed |= DragFloat(ids[n], &f[n], 1.0 / 255.0, 0.0, hdr ? 0.0 : 1.0, fmt_table_float[fmt_idx][n])
				value_changed_as_float |= value_changed
			}
			else {
				value_changed |= DragInt(ids[n], &i[n], 1.0, 0, hdr ? 0 : 255, fmt_table_int[fmt_idx][n])
			}
			if (flags & ColorEditFlags_.ColorEditFlags_NoOptions) == {} { OpenPopupOnItemClick("context", PopupFlags_.PopupFlags_MouseButtonRight) }
		}
	}
	else if (flags & ColorEditFlags_.ColorEditFlags_DisplayHex) != {} && (flags & ColorEditFlags_.ColorEditFlags_NoInputs) == {} {
		// RGB Hexadecimal Input
		buf : [64]u8
		if alpha { FormatString(buf[:], "#%02X%02X%02X%02X", Clamp(i[0], 0, 255), Clamp(i[1], 0, 255), Clamp(i[2], 0, 255), Clamp(i[3], 0, 255)) }
		else { FormatString(buf[:], "#%02X%02X%02X", Clamp(i[0], 0, 255), Clamp(i[1], 0, 255), Clamp(i[2], 0, 255)) }
		SetNextItemWidth(w_inputs)
		if InputText("##Text", buf[:], InputTextFlags_.InputTextFlags_CharsUppercase) {
			value_changed = true
			p := raw_data(&buf)
			for p[0] == '#' || CharIsBlankA(p[0]) { post_incr(&p) }

			i[2] = 0; i[1] = i[2]; i[0] = i[1]
			i[3] = 0xFF; // alpha default to 255 is not parsed by scanf (e.g. inputting #FFFFFF omitting alpha)
			if alpha {
				// Treat at unsigned (%X is unsigned)
				i[0] = i32((HEX_LUT_INVERSE[p[0]] << 4) | HEX_LUT_INVERSE[p[1]]); p = p[2:]
				i[1] = i32((HEX_LUT_INVERSE[p[0]] << 4) | HEX_LUT_INVERSE[p[1]]); p = p[2:]
				i[2] = i32((HEX_LUT_INVERSE[p[0]] << 4) | HEX_LUT_INVERSE[p[1]]); p = p[2:]
				i[3] = i32((HEX_LUT_INVERSE[p[0]] << 4) | HEX_LUT_INVERSE[p[1]]); p = p[2:]
			}
			else {
				i[0] = i32((HEX_LUT_INVERSE[p[0]] << 4) | HEX_LUT_INVERSE[p[1]]); p = p[2:]
				i[1] = i32((HEX_LUT_INVERSE[p[0]] << 4) | HEX_LUT_INVERSE[p[1]]); p = p[2:]
				i[2] = i32((HEX_LUT_INVERSE[p[0]] << 4) | HEX_LUT_INVERSE[p[1]]); p = p[2:]
			}
		}
		if (flags & ColorEditFlags_.ColorEditFlags_NoOptions) == {} { OpenPopupOnItemClick("context", PopupFlags_.PopupFlags_MouseButtonRight) }
	}

	picker_active_window : ^Window = nil
	if (flags & ColorEditFlags_.ColorEditFlags_NoSmallPreview) == {} {
		button_offset_x : f32 = ((flags & ColorEditFlags_.ColorEditFlags_NoInputs) != {} || (style.ColorButtonPosition == Dir.Dir_Left)) ? 0.0 : w_inputs + style.ItemInnerSpacing.x
		window.DC.CursorPos = Vec2{pos.x + button_offset_x, pos.y}

		col_v4 : Vec4 = {col[0], col[1], col[2], alpha ? col[3] : 1.0}
		if ColorButton("##ColorButton", col_v4, flags) {
			if (flags & ColorEditFlags_.ColorEditFlags_NoPicker) == {} {
				// Store current color and open a picker
				g.ColorPickerRef = col_v4
				OpenPopup("picker")
				SetNextWindowPos(GetBL(g.LastItemData.Rect) + Vec2{0.0, style.ItemSpacing.y})
			}
		}
		if (flags & ColorEditFlags_.ColorEditFlags_NoOptions) == {} { OpenPopupOnItemClick("context", PopupFlags_.PopupFlags_MouseButtonRight) }

		if BeginPopup("picker") {
			if g.CurrentWindow.BeginCount == 1 {
				picker_active_window = g.CurrentWindow
				if len(label) != label_display_end {
					TextEx(label[:label_display_end])
					Spacing()
				}
				picker_flags_to_forward : ColorEditFlags = ColorEditFlags_.ColorEditFlags_DataTypeMask_ | ColorEditFlags_.ColorEditFlags_PickerMask_ | ColorEditFlags_.ColorEditFlags_InputMask_ | ColorEditFlags_.ColorEditFlags_HDR | ColorEditFlags_.ColorEditFlags_NoAlpha | ColorEditFlags_.ColorEditFlags_AlphaBar
				picker_flags : ColorEditFlags = (flags_untouched & picker_flags_to_forward) | ColorEditFlags_.ColorEditFlags_DisplayMask_ | ColorEditFlags_.ColorEditFlags_NoLabel | ColorEditFlags_.ColorEditFlags_AlphaPreviewHalf
				SetNextItemWidth(square_sz * 12.0); // Use 256 + bar sizes?
				value_changed |= ColorPicker4("##picker", col, picker_flags, &g.ColorPickerRef)
			}
			EndPopup()
		}
	}

	if len(label) != label_display_end && (flags & ColorEditFlags_.ColorEditFlags_NoLabel) == {} {
		// Position not necessarily next to last submitted button (e.g. if style.ColorButtonPosition == Dir_Left),
		// but we need to use SameLine() to setup baseline correctly. Might want to refactor SameLine() to simplify this.
		SameLine(0.0, style.ItemInnerSpacing.x)
		window.DC.CursorPos.x = pos.x + ((flags & ColorEditFlags_.ColorEditFlags_NoInputs) != {} ? w_button : w_full + style.ItemInnerSpacing.x)
		TextEx(label[:label_display_end])
	}

	// Convert back
	if value_changed && picker_active_window == nil {
		if !value_changed_as_float { for n : i32 = 0; n < 4; n += 1 { f[n] = f32(i[n]) / 255.0 } }
		if (flags & ColorEditFlags_.ColorEditFlags_DisplayHSV) != {} && (flags & ColorEditFlags_.ColorEditFlags_InputRGB) != {} {
			g.ColorEditSavedHue = f[0]
			g.ColorEditSavedSat = f[1]
			ColorConvertHSVtoRGB(f[0], f[1], f[2], &f[0], &f[1], &f[2])
			g.ColorEditSavedID = g.ColorEditCurrentID
			g.ColorEditSavedColor = ColorConvertFloat4ToU32(Vec4{f[0], f[1], f[2], 0})
		}
		if (flags & ColorEditFlags_.ColorEditFlags_DisplayRGB) != {} && (flags & ColorEditFlags_.ColorEditFlags_InputHSV) != {} { ColorConvertRGBtoHSV(f[0], f[1], f[2], &f[0], &f[1], &f[2]) }

		col[0] = f[0]
		col[1] = f[1]
		col[2] = f[2]
		if alpha { col[3] = f[3] }
	}

	if set_current_color_edit_id { g.ColorEditCurrentID = 0 }
	PopID()
	EndGroup()

	// Drag and Drop Target
	// NB: The flag test is merely an optional micro-optimization, BeginDragDropTarget() does the same test.
	if (g.LastItemData.StatusFlags & ItemStatusFlags_.ItemStatusFlags_HoveredRect) != {} && (g.LastItemData.ItemFlags & cast(ItemFlags) ItemFlagsPrivate_.ItemFlags_ReadOnly) == {} && (flags & ColorEditFlags_.ColorEditFlags_NoDragDrop) == {} && BeginDragDropTarget() {
		accepted_drag_drop : bool = false
		if payload : ^Payload = AcceptDragDropPayload(IMGUI_PAYLOAD_TYPE_COLOR_3F); payload != nil {
			memcpy(cast(^f32) col, payload.Data, size_of(f32) * 3); // Preserve alpha if any //-V512 //-V1086
			accepted_drag_drop = true; value_changed = accepted_drag_drop
		}
		if payload : ^Payload = AcceptDragDropPayload(IMGUI_PAYLOAD_TYPE_COLOR_4F); payload != nil {
			memcpy(cast(^f32) col, payload.Data, size_of(f32) * cast(int)components)
			accepted_drag_drop = true; value_changed = accepted_drag_drop
		}

		// Drag-drop payloads are always RGB
		if accepted_drag_drop && (flags & ColorEditFlags_.ColorEditFlags_InputHSV) != {} { ColorConvertRGBtoHSV(col[0], col[1], col[2], &col[0], &col[1], &col[2]) }
		EndDragDropTarget()
	}

	// When picker is being actively used, use its active id so IsItemActive() will function on ColorEdit4().
	if picker_active_window != nil && g.ActiveId != 0 && g.ActiveIdWindow == picker_active_window { g.LastItemData.ID = g.ActiveId }

	if value_changed && g.LastItemData.ID != 0 {
		// In case of ID collision, the second EndGroup() won't catch g.ActiveId
		MarkItemEdited(g.LastItemData.ID)
	}

	return value_changed
}

ColorPicker3 :: proc(label : string, col : ^[3]f32, flags : ColorEditFlags) -> bool
{
	col4 : [4]f32 = {col[0], col[1], col[2], 1.0}
	if !ColorPicker4(label, &col4, flags | ColorEditFlags_.ColorEditFlags_NoAlpha) { return false }
	col[0] = col4[0]; col[1] = col4[1]; col[2] = col4[2]
	return true
}

// Helper for ColorPicker4()
RenderArrowsForVerticalBar :: proc(draw_list : ^DrawList, pos : Vec2, half_sz : Vec2, bar_w : f32, alpha : f32)
{
	alpha8 : U32 = cast(u32)IM_F32_TO_INT8_SAT(alpha)
	RenderArrowPointingAt(draw_list, Vec2{pos.x + half_sz.x + 1, pos.y}, Vec2{half_sz.x + 2, half_sz.y + 1}, Dir.Dir_Right, IM_COL32(0, 0, 0, alpha8))
	RenderArrowPointingAt(draw_list, Vec2{pos.x + half_sz.x, pos.y}, half_sz, Dir.Dir_Right, IM_COL32(255, 255, 255, alpha8))
	RenderArrowPointingAt(draw_list, Vec2{pos.x + bar_w - half_sz.x - 1, pos.y}, Vec2{half_sz.x + 2, half_sz.y + 1}, Dir.Dir_Left, IM_COL32(0, 0, 0, alpha8))
	RenderArrowPointingAt(draw_list, Vec2{pos.x + bar_w - half_sz.x, pos.y}, half_sz, Dir.Dir_Left, IM_COL32(255, 255, 255, alpha8))
}

// Note: ColorPicker4() only accesses 3 floats if ColorEditFlags_NoAlpha flag is set.
// (In C++ the 'float col[4]' notation for a function argument is equivalent to 'float* col', we only specify a size to facilitate understanding of the code.)
// FIXME: we adjust the big color square height based on item width, which may cause a flickering feedback loop (if automatic height makes a vertical scrollbar appears, affecting automatic width..)
// FIXME: this is trying to be aware of style.Alpha but not fully correct. Also, the color wheel will have overlapping glitches with (style.Alpha < 1.0)
ColorPicker4 :: proc(label : string, col : ^[4]f32, flags : ColorEditFlags = {}, ref_col : ^[4]f32 = nil) -> bool
{
	g : ^Context = GImGui
	window : ^Window = GetCurrentWindow()
	if window.SkipItems { return false }

	draw_list : ^DrawList = window.DrawList
	style : ^Style = &g.Style
	io : ^IO = &g.IO

	width : f32 = CalcItemWidth()
	is_readonly : bool = ((g.NextItemData.ItemFlags | g.CurrentItemFlags) & cast(ItemFlags)ItemFlagsPrivate_.ItemFlags_ReadOnly) != {}
	ClearFlags(&g.NextItemData)

	PushID(label)
	set_current_color_edit_id : bool = (g.ColorEditCurrentID == 0)
	if set_current_color_edit_id { g.ColorEditCurrentID = back(&window.IDStack)^ }
	BeginGroup()

	flags := flags
	if (flags & ColorEditFlags_.ColorEditFlags_NoSidePreview) == {} { flags |= ColorEditFlags_.ColorEditFlags_NoSmallPreview }

	// Context menu: display and store options.
	if (flags & ColorEditFlags_.ColorEditFlags_NoOptions) == {} { ColorPickerOptionsPopup(col, flags) }

	// Read stored options
	if (flags & ColorEditFlags_.ColorEditFlags_PickerMask_) == {} { flags |= ((g.ColorEditOptions & ColorEditFlags_.ColorEditFlags_PickerMask_) != {} ? g.ColorEditOptions : ColorEditFlags_.ColorEditFlags_DefaultOptions_) & ColorEditFlags_.ColorEditFlags_PickerMask_ }
	if (flags & ColorEditFlags_.ColorEditFlags_InputMask_) == {} { flags |= ((g.ColorEditOptions & ColorEditFlags_.ColorEditFlags_InputMask_) != {} ? g.ColorEditOptions : ColorEditFlags_.ColorEditFlags_DefaultOptions_) & ColorEditFlags_.ColorEditFlags_InputMask_ }
	IM_ASSERT(IsPowerOfTwo(u32(flags & ColorEditFlags_.ColorEditFlags_PickerMask_))); // Check that only 1 is selected
	IM_ASSERT(IsPowerOfTwo(u32(flags & ColorEditFlags_.ColorEditFlags_InputMask_))); // Check that only 1 is selected
	if (flags & ColorEditFlags_.ColorEditFlags_NoOptions) == {} { flags |= (g.ColorEditOptions & ColorEditFlags_.ColorEditFlags_AlphaBar) }

	// Setup
	components : i32 = (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) != {} ? 3 : 4
	alpha_bar : bool = (flags & ColorEditFlags_.ColorEditFlags_AlphaBar) != {} && (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) == {}
	picker_pos : Vec2 = window.DC.CursorPos
	square_sz : f32 = GetFrameHeight()
	bars_width : f32 = square_sz; // Arbitrary smallish width of Hue/Alpha picking bars
	sv_picker_size : f32 = Max(bars_width * 1, width - (alpha_bar ? 2 : 1) * (bars_width + style.ItemInnerSpacing.x)); // Saturation/Value picking box
	bar0_pos_x : f32 = picker_pos.x + sv_picker_size + style.ItemInnerSpacing.x
	bar1_pos_x : f32 = bar0_pos_x + bars_width + style.ItemInnerSpacing.x
	bars_triangles_half_sz : f32 = IM_TRUNC(bars_width * 0.20)

	backup_initial_col : [4]f32
	memcpy(&backup_initial_col, col, int(components) * size_of(f32))

	wheel_thickness : f32 = sv_picker_size * 0.08
	wheel_r_outer : f32 = sv_picker_size * 0.50
	wheel_r_inner : f32 = wheel_r_outer - wheel_thickness
	wheel_center := Vec2{ picker_pos.x + (sv_picker_size + bars_width) * 0.5, picker_pos.y + sv_picker_size * 0.5 }

	// Note: the triangle is displayed rotated with triangle_pa pointing to Hue, but most coordinates stays unrotated for logic.
	triangle_r : f32 = wheel_r_inner - cast(f32) cast(i32) (sv_picker_size * 0.027)
	triangle_pa : Vec2 = Vec2{triangle_r, 0.0}; // Hue point.
	triangle_pb : Vec2 = Vec2{triangle_r * -0.5, triangle_r * -0.866025}; // Black point.
	triangle_pc : Vec2 = Vec2{triangle_r * -0.5, triangle_r * +0.866025}; // White point.

	H : f32 = col[0]; S : f32 = col[1]; V : f32 = col[2]
	R : f32 = col[0]; G : f32 = col[1]; B : f32 = col[2]
	if (flags & ColorEditFlags_.ColorEditFlags_InputRGB) != {} {
		// Hue is lost when converting from grayscale rgb (saturation=0). Restore it.
		ColorConvertRGBtoHSV(R, G, B, &H, &S, &V)
		ColorEditRestoreHS(cast(^[3]f32) col, &H, &S, &V)
	}
	else if (flags & ColorEditFlags_.ColorEditFlags_InputHSV) != {} {
		ColorConvertHSVtoRGB(H, S, V, &R, &G, &B)
	}

	value_changed : bool = false; value_changed_h : bool = false; value_changed_sv : bool = false

	PushItemFlag(ItemFlags_.ItemFlags_NoNav, true)
	if (flags & ColorEditFlags_.ColorEditFlags_PickerHueWheel) != {} {
		// Hue wheel + SV triangle logic
		InvisibleButton("hsv", Vec2{sv_picker_size + style.ItemInnerSpacing.x + bars_width, sv_picker_size})
		if IsItemActive() && !is_readonly {
			initial_off : Vec2 = g.IO.MouseClickedPos[0] - wheel_center
			current_off : Vec2 = g.IO.MousePos - wheel_center
			initial_dist2 : f32 = LengthSqr(initial_off)
			if initial_dist2 >= (wheel_r_inner - 1) * (wheel_r_inner - 1) && initial_dist2 <= (wheel_r_outer + 1) * (wheel_r_outer + 1) {
				// Interactive with Hue wheel
				H = Atan2(current_off.y, current_off.x) / IM_PI * 0.5
				if H < 0.0 { H += 1.0 }
				value_changed_h = true; value_changed = value_changed_h
			}
			cos_hue_angle : f32 = Cos(-H * 2.0 * IM_PI)
			sin_hue_angle : f32 = Sin(-H * 2.0 * IM_PI)
			if TriangleContainsPoint(triangle_pa, triangle_pb, triangle_pc, Rotate(initial_off, cos_hue_angle, sin_hue_angle)) {
				// Interacting with SV triangle
				current_off_unrotated : Vec2 = Rotate(current_off, cos_hue_angle, sin_hue_angle)
				if !TriangleContainsPoint(triangle_pa, triangle_pb, triangle_pc, current_off_unrotated) { current_off_unrotated = TriangleClosestPoint(triangle_pa, triangle_pb, triangle_pc, current_off_unrotated) }
				uu : f32; vv : f32; ww : f32
				TriangleBarycentricCoords(triangle_pa, triangle_pb, triangle_pc, current_off_unrotated, &uu, &vv, &ww)
				V = Clamp(1.0 - vv, 0.0001, 1.0)
				S = Clamp(uu / V, 0.0001, 1.0)
				value_changed_sv = true; value_changed = value_changed_sv
			}
		}
		if (flags & ColorEditFlags_.ColorEditFlags_NoOptions) == {} { OpenPopupOnItemClick("context", PopupFlags_.PopupFlags_MouseButtonRight) }
	}
	else if (flags & ColorEditFlags_.ColorEditFlags_PickerHueBar) != {} {
		// SV rectangle logic
		InvisibleButton("sv", Vec2{sv_picker_size, sv_picker_size})
		if IsItemActive() && !is_readonly {
			S = Saturate((io.MousePos.x - picker_pos.x) / (sv_picker_size - 1))
			V = 1.0 - Saturate((io.MousePos.y - picker_pos.y) / (sv_picker_size - 1))
			ColorEditRestoreH(cast(^[3]f32) col, &H); // Greatly reduces hue jitter and reset to 0 when hue == 255 and color is rapidly modified using SV square.
			value_changed_sv = true; value_changed = value_changed_sv
		}
		if (flags & ColorEditFlags_.ColorEditFlags_NoOptions) == {} { OpenPopupOnItemClick("context", PopupFlags_.PopupFlags_MouseButtonRight) }

		// Hue bar logic
		SetCursorScreenPos(Vec2{bar0_pos_x, picker_pos.y})
		InvisibleButton("hue", Vec2{bars_width, sv_picker_size})
		if IsItemActive() && !is_readonly {
			H = Saturate((io.MousePos.y - picker_pos.y) / (sv_picker_size - 1))
			value_changed_h = true; value_changed = value_changed_h
		}
	}

	// Alpha bar logic
	if alpha_bar {
		SetCursorScreenPos(Vec2{bar1_pos_x, picker_pos.y})
		InvisibleButton("alpha", Vec2{bars_width, sv_picker_size})
		if IsItemActive() {
			col[3] = 1.0 - Saturate((io.MousePos.y - picker_pos.y) / (sv_picker_size - 1))
			value_changed = true
		}
	}
	PopItemFlag(); // ItemFlags_NoNav

	if (flags & ColorEditFlags_.ColorEditFlags_NoSidePreview) == {} {
		SameLine(0, style.ItemInnerSpacing.x)
		BeginGroup()
	}

	if (flags & ColorEditFlags_.ColorEditFlags_NoLabel) == {} {
		label_display_end := FindRenderedTextEnd(label)
		if len(label) != label_display_end {
			if (flags & ColorEditFlags_.ColorEditFlags_NoSidePreview) != {} { SameLine(0, style.ItemInnerSpacing.x) }
			TextEx(label[:label_display_end])
		}
	}

	if (flags & ColorEditFlags_.ColorEditFlags_NoSidePreview) == {} {
		PushItemFlag(ItemFlags_.ItemFlags_NoNavDefaultFocus, true)
		col_v4 : Vec4 = {col[0], col[1], col[2], (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) != {} ? 1.0 : col[3] }
		if (flags & ColorEditFlags_.ColorEditFlags_NoLabel) != {} { Text("Current") }

		sub_flags_to_forward : ColorEditFlags = ColorEditFlags_.ColorEditFlags_InputMask_ | ColorEditFlags_.ColorEditFlags_HDR | ColorEditFlags_.ColorEditFlags_AlphaPreview | ColorEditFlags_.ColorEditFlags_AlphaPreviewHalf | ColorEditFlags_.ColorEditFlags_NoTooltip
		ColorButton("##current", col_v4, (flags & sub_flags_to_forward), Vec2{square_sz * 3, square_sz * 2})
		if ref_col != nil {
			Text("Original")
			ref_col_v4 : Vec4 = {ref_col[0], ref_col[1], ref_col[2], (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) != {} ? 1.0 : ref_col[3]}
			if ColorButton("##original", ref_col_v4, (flags & sub_flags_to_forward), Vec2{square_sz * 3, square_sz * 2}) {
				memcpy(col, ref_col, int(components) * size_of(f32))
				value_changed = true
			}
		}
		PopItemFlag()
		EndGroup()
	}

	// Convert back color to RGB
	if value_changed_h || value_changed_sv {
		if (flags & ColorEditFlags_.ColorEditFlags_InputRGB) != {} {
			ColorConvertHSVtoRGB(H, S, V, &col[0], &col[1], &col[2])
			g.ColorEditSavedHue = H
			g.ColorEditSavedSat = S
			g.ColorEditSavedID = g.ColorEditCurrentID
			g.ColorEditSavedColor = ColorConvertFloat4ToU32(Vec4{col[0], col[1], col[2], 0})
		}
		else if (flags & ColorEditFlags_.ColorEditFlags_InputHSV) != {} {
			col[0] = H
			col[1] = S
			col[2] = V
		}
	}

	// R,G,B and H,S,V slider color editor
	value_changed_fix_hue_wrap : bool = false
	if (flags & ColorEditFlags_.ColorEditFlags_NoInputs) == {} {
		PushItemWidth((alpha_bar ? bar1_pos_x : bar0_pos_x) + bars_width - picker_pos.x)
		sub_flags_to_forward : ColorEditFlags = ColorEditFlags_.ColorEditFlags_DataTypeMask_ | ColorEditFlags_.ColorEditFlags_InputMask_ | ColorEditFlags_.ColorEditFlags_HDR | ColorEditFlags_.ColorEditFlags_NoAlpha | ColorEditFlags_.ColorEditFlags_NoOptions | ColorEditFlags_.ColorEditFlags_NoTooltip | ColorEditFlags_.ColorEditFlags_NoSmallPreview | ColorEditFlags_.ColorEditFlags_AlphaPreview | ColorEditFlags_.ColorEditFlags_AlphaPreviewHalf
		sub_flags : ColorEditFlags = (flags & sub_flags_to_forward) | ColorEditFlags_.ColorEditFlags_NoPicker
		if flags & ColorEditFlags_.ColorEditFlags_DisplayRGB != {} || (flags & ColorEditFlags_.ColorEditFlags_DisplayMask_) == {} { if ColorEdit4("##rgb", col, sub_flags | ColorEditFlags_.ColorEditFlags_DisplayRGB) {
	// FIXME: Hackily differentiating using the DragInt (ActiveId != 0 && !ActiveIdAllowOverlap) vs. using the InputText or DropTarget.
	// For the later we don't want to run the hue-wrap canceling code. If you are well versed in HSV picker please provide your input! (See #2050)
	value_changed_fix_hue_wrap = (g.ActiveId != 0 && !g.ActiveIdAllowOverlap)
	value_changed = true
} }
		if flags & ColorEditFlags_.ColorEditFlags_DisplayHSV != {} || (flags & ColorEditFlags_.ColorEditFlags_DisplayMask_) == {} { value_changed |= ColorEdit4("##hsv", col, sub_flags | ColorEditFlags_.ColorEditFlags_DisplayHSV) }
		if flags & ColorEditFlags_.ColorEditFlags_DisplayHex != {} || (flags & ColorEditFlags_.ColorEditFlags_DisplayMask_) == {} { value_changed |= ColorEdit4("##hex", col, sub_flags | ColorEditFlags_.ColorEditFlags_DisplayHex) }
		PopItemWidth()
	}

	// Try to cancel hue wrap (after ColorEdit4 call), if any
	if value_changed_fix_hue_wrap && (flags & ColorEditFlags_.ColorEditFlags_InputRGB) != {} {
		new_H : f32; new_S : f32; new_V : f32
		ColorConvertRGBtoHSV(col[0], col[1], col[2], &new_H, &new_S, &new_V)
		if new_H <= 0 && H > 0 {
			if new_V <= 0 && V != new_V { ColorConvertHSVtoRGB(H, S, new_V <= 0 ? V * 0.5 : new_V, &col[0], &col[1], &col[2]) }
			else if new_S <= 0 { ColorConvertHSVtoRGB(H, new_S <= 0 ? S * 0.5 : new_S, new_V, &col[0], &col[1], &col[2]) }
		}
	}

	if value_changed {
		if (flags & ColorEditFlags_.ColorEditFlags_InputRGB) != {} {
			R = col[0]
			G = col[1]
			B = col[2]
			ColorConvertRGBtoHSV(R, G, B, &H, &S, &V)
			ColorEditRestoreHS(cast(^[3]f32) col, &H, &S, &V); // Fix local Hue as display below will use it immediately.
		}
		else if (flags & ColorEditFlags_.ColorEditFlags_InputHSV) != {} {
			H = col[0]
			S = col[1]
			V = col[2]
			ColorConvertHSVtoRGB(H, S, V, &R, &G, &B)
		}
	}

	style_alpha8 : i32 = IM_F32_TO_INT8_SAT(style.Alpha)
	col_black : U32 = IM_COL32(0, 0, 0, style_alpha8)
	col_white : U32 = IM_COL32(255, 255, 255, style_alpha8)
	col_midgrey : U32 = IM_COL32(128, 128, 128, style_alpha8)
	col_hues : [6 + 1]U32 = {IM_COL32(255, 0, 0, style_alpha8), IM_COL32(255, 255, 0, style_alpha8), IM_COL32(0, 255, 0, style_alpha8), IM_COL32(0, 255, 255, style_alpha8), IM_COL32(0, 0, 255, style_alpha8), IM_COL32(255, 0, 255, style_alpha8), IM_COL32(255, 0, 0, style_alpha8)}

	hue_color_f : Vec4 = {1, 1, 1, style.Alpha}; ColorConvertHSVtoRGB(H, 1, 1, &hue_color_f.x, &hue_color_f.y, &hue_color_f.z)
	hue_color32 : U32 = ColorConvertFloat4ToU32(hue_color_f)
	user_col32_striped_of_alpha : U32 = ColorConvertFloat4ToU32(Vec4{R, G, B, style.Alpha}); // Important: this is still including the main rendering/style alpha!!

	sv_cursor_pos : Vec2

	if (flags & ColorEditFlags_.ColorEditFlags_PickerHueWheel) != {} {
		// Render Hue Wheel
		aeps : f32 = 0.5 / wheel_r_outer; // Half a pixel arc length in radians (2pi cancels out).
		segment_per_arc : i32 = Max(i32(4), cast(i32) wheel_r_outer / 12)
		for n : i32 = 0; n < 6; n += 1 {
			a0 : f32 = f32(n) / 6.0 * 2.0 * IM_PI - aeps
			a1 : f32 = f32(n + 1.0) / 6.0 * 2.0 * IM_PI + aeps
			vert_start_idx : i32 = draw_list.VtxBuffer.Size
			PathArcTo(draw_list, wheel_center, (wheel_r_inner + wheel_r_outer) * 0.5, a0, a1, segment_per_arc)
			PathStroke(draw_list, col_white, {}, wheel_thickness)
			vert_end_idx : i32 = draw_list.VtxBuffer.Size

			// Paint colors over existing vertices
			gradient_p0 := Vec2{ wheel_center.x + Cos(a0) * wheel_r_inner, wheel_center.y + Sin(a0) * wheel_r_inner }
			gradient_p1 := Vec2{ wheel_center.x + Cos(a1) * wheel_r_inner, wheel_center.y + Sin(a1) * wheel_r_inner }
			ShadeVertsLinearColorGradientKeepAlpha(draw_list, vert_start_idx, vert_end_idx, gradient_p0, gradient_p1, col_hues[n], col_hues[n + 1])
		}

		// Render Cursor + preview on Hue Wheel
		cos_hue_angle : f32 = Cos(H * 2.0 * IM_PI)
		sin_hue_angle : f32 = Sin(H * 2.0 * IM_PI)
		hue_cursor_pos := Vec2{ wheel_center.x + cos_hue_angle * (wheel_r_inner + wheel_r_outer) * 0.5, wheel_center.y + sin_hue_angle * (wheel_r_inner + wheel_r_outer) * 0.5 }
		hue_cursor_rad : f32 = value_changed_h ? wheel_thickness * 0.65 : wheel_thickness * 0.55
		hue_cursor_segments : i32 = _CalcCircleAutoSegmentCount(draw_list, hue_cursor_rad); // Lock segment count so the +1 one matches others.
		AddCircleFilled(draw_list, hue_cursor_pos, hue_cursor_rad, hue_color32, hue_cursor_segments)
		AddCircle(draw_list, hue_cursor_pos, hue_cursor_rad + 1, col_midgrey, hue_cursor_segments)
		AddCircle(draw_list, hue_cursor_pos, hue_cursor_rad, col_white, hue_cursor_segments)

		// Render SV triangle (rotated according to hue)
		tra : Vec2 = wheel_center + Rotate(triangle_pa, cos_hue_angle, sin_hue_angle)
		trb : Vec2 = wheel_center + Rotate(triangle_pb, cos_hue_angle, sin_hue_angle)
		trc : Vec2 = wheel_center + Rotate(triangle_pc, cos_hue_angle, sin_hue_angle)
		uv_white : Vec2 = GetFontTexUvWhitePixel()
		PrimReserve(draw_list, 3, 3)
		PrimVtx(draw_list, tra, uv_white, hue_color32)
		PrimVtx(draw_list, trb, uv_white, col_black)
		PrimVtx(draw_list, trc, uv_white, col_white)
		AddTriangle(draw_list, tra, trb, trc, col_midgrey, 1.5)
		sv_cursor_pos = Lerp(Lerp(trc, tra, Saturate(S)), trb, Saturate(1 - V))
	}
	else if (flags & ColorEditFlags_.ColorEditFlags_PickerHueBar) != {} {
		// Render SV Square
		AddRectFilledMultiColor(draw_list, picker_pos, picker_pos + Vec2{sv_picker_size, sv_picker_size}, col_white, hue_color32, hue_color32, col_white)
		AddRectFilledMultiColor(draw_list, picker_pos, picker_pos + Vec2{sv_picker_size, sv_picker_size}, 0, 0, col_black, col_black)
		RenderFrameBorder(picker_pos, picker_pos + Vec2{sv_picker_size, sv_picker_size}, 0.0)
		sv_cursor_pos.x = Clamp(IM_ROUND(picker_pos.x + Saturate(S) * sv_picker_size), picker_pos.x + 2, picker_pos.x + sv_picker_size - 2); // Sneakily prevent the circle to stick out too much
		sv_cursor_pos.y = Clamp(IM_ROUND(picker_pos.y + Saturate(1 - V) * sv_picker_size), picker_pos.y + 2, picker_pos.y + sv_picker_size - 2)

		// Render Hue Bar
		for i : i32 = 0; i < 6; i += 1 { AddRectFilledMultiColor(draw_list, Vec2{bar0_pos_x, picker_pos.y + f32(i) * (sv_picker_size / 6)}, Vec2{bar0_pos_x + bars_width, picker_pos.y + f32(i + 1) * (sv_picker_size / 6)}, col_hues[i], col_hues[i], col_hues[i + 1], col_hues[i + 1]) }

		bar0_line_y : f32 = IM_ROUND(picker_pos.y + H * sv_picker_size)
		RenderFrameBorder(Vec2{bar0_pos_x, picker_pos.y}, Vec2{bar0_pos_x + bars_width, picker_pos.y + sv_picker_size}, 0.0)
		RenderArrowsForVerticalBar(draw_list, Vec2{bar0_pos_x - 1, bar0_line_y}, Vec2{bars_triangles_half_sz + 1, bars_triangles_half_sz}, bars_width + 2.0, style.Alpha)
	}

	// Render cursor/preview circle (clamp S/V within 0..1 range because floating points colors may lead HSV values to be out of range)
	sv_cursor_rad : f32 = value_changed_sv ? wheel_thickness * 0.55 : wheel_thickness * 0.40
	sv_cursor_segments : i32 = _CalcCircleAutoSegmentCount(draw_list, sv_cursor_rad); // Lock segment count so the +1 one matches others.
	AddCircleFilled(draw_list, sv_cursor_pos, sv_cursor_rad, user_col32_striped_of_alpha, sv_cursor_segments)
	AddCircle(draw_list, sv_cursor_pos, sv_cursor_rad + 1, col_midgrey, sv_cursor_segments)
	AddCircle(draw_list, sv_cursor_pos, sv_cursor_rad, col_white, sv_cursor_segments)

	// Render alpha bar
	if alpha_bar {
		alpha : f32 = Saturate(col[3])
		bar1_bb : Rect; init(&bar1_bb, bar1_pos_x, picker_pos.y, bar1_pos_x + bars_width, picker_pos.y + sv_picker_size)
		RenderColorRectWithAlphaCheckerboard(draw_list, bar1_bb.Min, bar1_bb.Max, 0, GetWidth(bar1_bb) / 2.0, Vec2{0.0, 0.0})
		AddRectFilledMultiColor(draw_list, bar1_bb.Min, bar1_bb.Max, user_col32_striped_of_alpha, user_col32_striped_of_alpha, user_col32_striped_of_alpha & ~U32(IM_COL32_A_MASK), user_col32_striped_of_alpha & ~U32(IM_COL32_A_MASK))
		bar1_line_y : f32 = IM_ROUND(picker_pos.y + (1.0 - alpha) * sv_picker_size)
		RenderFrameBorder(bar1_bb.Min, bar1_bb.Max, 0.0)
		RenderArrowsForVerticalBar(draw_list, Vec2{bar1_pos_x - 1, bar1_line_y}, Vec2{bars_triangles_half_sz + 1, bars_triangles_half_sz}, bars_width + 2.0, style.Alpha)
	}

	EndGroup()

	if value_changed && memcmp(&backup_initial_col, col, components * size_of(f32)) == 0 { value_changed = false }
	if value_changed && g.LastItemData.ID != 0 {
		// In case of ID collision, the second EndGroup() won't catch g.ActiveId
		MarkItemEdited(g.LastItemData.ID)
	}

	if set_current_color_edit_id { g.ColorEditCurrentID = 0 }
	PopID()

	return value_changed
}

// A little color square. Return true when clicked.
// FIXME: May want to display/ignore the alpha component in the color display? Yet show it in the tooltip.
// 'desc_id' is not called 'label' because we don't display it next to the button, but only in the tooltip.
// Note that 'col' may be encoded in HSV if ColorEditFlags_InputHSV is set.
ColorButton :: proc(desc_id : string, col : Vec4, flags : ColorEditFlags = {}, size_arg : Vec2 = {}) -> bool
{
	window : ^Window = GetCurrentWindow()
	if window.SkipItems { return false }

	g : ^Context = GImGui
	id : ID = GetID(window, desc_id)
	default_size : f32 = GetFrameHeight()
	size := Vec2{ size_arg.x == 0.0 ? default_size : size_arg.x, size_arg.y == 0.0 ? default_size : size_arg.y }
	bb : Rect; init(&bb, window.DC.CursorPos, window.DC.CursorPos + size)
	ItemSize(bb, (size.y >= default_size) ? g.Style.FramePadding.y : 0.0)
	if !ItemAdd(bb, id) { return false }

	hovered : bool; held : bool
	pressed : bool = ButtonBehavior(bb, id, &hovered, &held)

	flags := flags
	if (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) != {} { flags &= cast(ColorEditFlags) ~i32(ColorEditFlags_.ColorEditFlags_AlphaPreview | ColorEditFlags_.ColorEditFlags_AlphaPreviewHalf) }

	col_rgb : Vec4 = col
	if (flags & ColorEditFlags_.ColorEditFlags_InputHSV) != {} { ColorConvertHSVtoRGB(col_rgb.x, col_rgb.y, col_rgb.z, &col_rgb.x, &col_rgb.y, &col_rgb.z) }

	col_rgb_without_alpha : Vec4 = {col_rgb.x, col_rgb.y, col_rgb.z, 1.0}
	grid_step : f32 = Min(size.x, size.y) / 2.99
	rounding : f32 = Min(g.Style.FrameRounding, grid_step * 0.5)
	bb_inner : Rect = bb
	off : f32 = 0.0
	if (flags & ColorEditFlags_.ColorEditFlags_NoBorder) == {} {
		off = -0.75; // The border (using Col_FrameBg) tends to look off when color is near-opaque and rounding is enabled. This offset seemed like a good middle ground to reduce those artifacts.
		Expand(&bb_inner, off)
	}
	if (flags & ColorEditFlags_.ColorEditFlags_AlphaPreviewHalf) != {} && col_rgb.w < 1.0 {
		mid_x : f32 = IM_ROUND((bb_inner.Min.x + bb_inner.Max.x) * 0.5)
		RenderColorRectWithAlphaCheckerboard(window.DrawList, Vec2{bb_inner.Min.x + grid_step, bb_inner.Min.y}, bb_inner.Max, GetColorU32(col_rgb), grid_step, Vec2{-grid_step + off, off}, rounding, DrawFlags_.DrawFlags_RoundCornersRight)
		AddRectFilled(window.DrawList, bb_inner.Min, Vec2{mid_x, bb_inner.Max.y}, GetColorU32(col_rgb_without_alpha), rounding, DrawFlags_.DrawFlags_RoundCornersLeft)
	}
	else {
		// Because GetColorU32() multiplies by the global style Alpha and we don't want to display a checkerboard if the source code had no alpha
		col_source : Vec4 = (flags & ColorEditFlags_.ColorEditFlags_AlphaPreview) != {} ? col_rgb : col_rgb_without_alpha
		if col_source.w < 1.0 { RenderColorRectWithAlphaCheckerboard(window.DrawList, bb_inner.Min, bb_inner.Max, GetColorU32(col_source), grid_step, Vec2{off, off}, rounding) }
		else { AddRectFilled(window.DrawList, bb_inner.Min, bb_inner.Max, GetColorU32(col_source), rounding) }
	}
	RenderNavCursor(bb, id)
	if (flags & ColorEditFlags_.ColorEditFlags_NoBorder) == {} {
		if g.Style.FrameBorderSize > 0.0 { RenderFrameBorder(bb.Min, bb.Max, rounding) }
		else {
			// Color button are often in need of some sort of border
			AddRect(window.DrawList, bb.Min, bb.Max, GetColorU32(Col_.Col_FrameBg), rounding)
		}
	}

	// Drag and Drop Source
	// NB: The ActiveId test is merely an optional micro-optimization, BeginDragDropSource() does the same test.
	if g.ActiveId == id && (flags & ColorEditFlags_.ColorEditFlags_NoDragDrop) == {} && BeginDragDropSource() {
		if (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) != {} { SetDragDropPayload(IMGUI_PAYLOAD_TYPE_COLOR_3F, &col_rgb, size_of(f32) * 3, Cond_.Cond_Once) }
		else { SetDragDropPayload(IMGUI_PAYLOAD_TYPE_COLOR_4F, &col_rgb, size_of(f32) * 4, Cond_.Cond_Once) }
		ColorButton(desc_id, col, flags)
		SameLine()
		TextEx("Color")
		EndDragDropSource()
	}

	// Tooltip
	if (flags & ColorEditFlags_.ColorEditFlags_NoTooltip) == {} && hovered && IsItemHovered(HoveredFlags_.HoveredFlags_ForTooltip) { ColorTooltip(desc_id, col, flags & (ColorEditFlags_.ColorEditFlags_InputMask_ | ColorEditFlags_.ColorEditFlags_NoAlpha | ColorEditFlags_.ColorEditFlags_AlphaPreview | ColorEditFlags_.ColorEditFlags_AlphaPreviewHalf)) }

	return pressed
}

// Initialize/override default color options
SetColorEditOptions :: proc(flags : ColorEditFlags)
{
	flags := flags
	g : ^Context = GImGui
	if (flags & ColorEditFlags_.ColorEditFlags_DisplayMask_) == {} { flags |= ColorEditFlags_.ColorEditFlags_DefaultOptions_ & ColorEditFlags_.ColorEditFlags_DisplayMask_ }
	if (flags & ColorEditFlags_.ColorEditFlags_DataTypeMask_) == {} { flags |= ColorEditFlags_.ColorEditFlags_DefaultOptions_ & ColorEditFlags_.ColorEditFlags_DataTypeMask_ }
	if (flags & ColorEditFlags_.ColorEditFlags_PickerMask_) == {} { flags |= ColorEditFlags_.ColorEditFlags_DefaultOptions_ & ColorEditFlags_.ColorEditFlags_PickerMask_ }
	if (flags & ColorEditFlags_.ColorEditFlags_InputMask_) == {} { flags |= ColorEditFlags_.ColorEditFlags_DefaultOptions_ & ColorEditFlags_.ColorEditFlags_InputMask_ }
	IM_ASSERT(IsPowerOfTwo(u32(flags & ColorEditFlags_.ColorEditFlags_DisplayMask_))); // Check only 1 option is selected
	IM_ASSERT(IsPowerOfTwo(u32(flags & ColorEditFlags_.ColorEditFlags_DataTypeMask_))); // Check only 1 option is selected
	IM_ASSERT(IsPowerOfTwo(u32(flags & ColorEditFlags_.ColorEditFlags_PickerMask_))); // Check only 1 option is selected
	IM_ASSERT(IsPowerOfTwo(u32(flags & ColorEditFlags_.ColorEditFlags_InputMask_))); // Check only 1 option is selected
	g.ColorEditOptions = flags
}

// Note: only access 3 floats if ColorEditFlags_NoAlpha flag is set.
ColorTooltip :: proc(text : string, col : [4]f32, flags : ColorEditFlags)
{
	g : ^Context = GImGui

	if !BeginTooltipEx(TooltipFlags_.TooltipFlags_OverridePrevious, WindowFlags_.WindowFlags_None) { return }
	text_end := text != "" ? FindRenderedTextEnd(text) : len(text)
	if text_end > 0 {
		TextEx(text[:text_end])
		Separator()
	}

	sz := Vec2{ g.FontSize * 3 + g.Style.FramePadding.y * 2, g.FontSize * 3 + g.Style.FramePadding.y * 2 }
	cf : Vec4 = { col[0], col[1], col[2], (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) != {} ? 1.0 : col[3] }
	cr : i32 = IM_F32_TO_INT8_SAT(col[0]); cg : i32 = IM_F32_TO_INT8_SAT(col[1]); cb : i32 = IM_F32_TO_INT8_SAT(col[2]); ca : i32 = (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) != {} ? 255 : IM_F32_TO_INT8_SAT(col[3])
	ColorButton("##preview", cf, (flags & (ColorEditFlags_.ColorEditFlags_InputMask_ | ColorEditFlags_.ColorEditFlags_NoAlpha | ColorEditFlags_.ColorEditFlags_AlphaPreview | ColorEditFlags_.ColorEditFlags_AlphaPreviewHalf)) | ColorEditFlags_.ColorEditFlags_NoTooltip, sz)
	SameLine()
	if (flags & ColorEditFlags_.ColorEditFlags_InputRGB) != {} || (flags & ColorEditFlags_.ColorEditFlags_InputMask_) == {} {
		if (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) != {} { Text("#%02X%02X%02X\nR: %d, G: %d, B: %d\n(%.3f, %.3f, %.3f)", cr, cg, cb, cr, cg, cb, col[0], col[1], col[2]) }
		else { Text("#%02X%02X%02X%02X\nR:%d, G:%d, B:%d, A:%d\n(%.3f, %.3f, %.3f, %.3f)", cr, cg, cb, ca, cr, cg, cb, ca, col[0], col[1], col[2], col[3]) }
	}
	else if (flags & ColorEditFlags_.ColorEditFlags_InputHSV) != {} {
		if (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) != {} { Text("H: %.3f, S: %.3f, V: %.3f", col[0], col[1], col[2]) }
		else { Text("H: %.3f, S: %.3f, V: %.3f, A: %.3f", col[0], col[1], col[2], col[3]) }
	}
	EndTooltip()
}

ColorEditOptionsPopup :: proc(col : ^[4]f32, flags : ColorEditFlags)
{
	allow_opt_inputs : bool = (flags & ColorEditFlags_.ColorEditFlags_DisplayMask_) == {}
	allow_opt_datatype : bool = (flags & ColorEditFlags_.ColorEditFlags_DataTypeMask_) == {}
	if (!allow_opt_inputs && !allow_opt_datatype) || !BeginPopup("context") { return }

	g : ^Context = GImGui
	PushItemFlag(cast(ItemFlags)ItemFlagsPrivate_.ItemFlags_NoMarkEdited, true)
	opts : ColorEditFlags = g.ColorEditOptions
	if allow_opt_inputs {
		if RadioButton("RGB", (opts & ColorEditFlags_.ColorEditFlags_DisplayRGB) != {}) { opts = (opts & cast(ColorEditFlags)~cast(i32)ColorEditFlags_.ColorEditFlags_DisplayMask_) | ColorEditFlags_.ColorEditFlags_DisplayRGB }
		if RadioButton("HSV", (opts & ColorEditFlags_.ColorEditFlags_DisplayHSV) != {}) { opts = (opts & cast(ColorEditFlags)~cast(i32)ColorEditFlags_.ColorEditFlags_DisplayMask_) | ColorEditFlags_.ColorEditFlags_DisplayHSV }
		if RadioButton("Hex", (opts & ColorEditFlags_.ColorEditFlags_DisplayHex) != {}) { opts = (opts & cast(ColorEditFlags)~cast(i32)ColorEditFlags_.ColorEditFlags_DisplayMask_) | ColorEditFlags_.ColorEditFlags_DisplayHex }
	}
	if allow_opt_datatype {
		if allow_opt_inputs { Separator() }
		if RadioButton("0..255", (opts & ColorEditFlags_.ColorEditFlags_Uint8) != {}) { opts = (opts & cast(ColorEditFlags)~cast(i32)ColorEditFlags_.ColorEditFlags_DataTypeMask_) | ColorEditFlags_.ColorEditFlags_Uint8 }
		if RadioButton("0.00..1.00", (opts & ColorEditFlags_.ColorEditFlags_Float) != {}) { opts = (opts & cast(ColorEditFlags)~cast(i32)ColorEditFlags_.ColorEditFlags_DataTypeMask_) | ColorEditFlags_.ColorEditFlags_Float }
	}

	if allow_opt_inputs || allow_opt_datatype { Separator() }
	if Button("Copy as..", Vec2{-1, 0}) { OpenPopup("Copy") }
	if BeginPopup("Copy") {
		cr : i32 = IM_F32_TO_INT8_SAT(col[0]); cg : i32 = IM_F32_TO_INT8_SAT(col[1]); cb : i32 = IM_F32_TO_INT8_SAT(col[2]); ca : i32 = (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) != {} ? 255 : IM_F32_TO_INT8_SAT(col[3])
		buf : [64]u8; buf_str : string; l : i32
		l = FormatString(buf[:], "(%.3ff, %.3ff, %.3ff, %.3ff)", col[0], col[1], col[2], (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) != {} ? 1.0 : col[3]); buf_str = string_from_slice(buf[:l], false)
		if Selectable(buf_str) { SetClipboardText(buf_str) }
		l = FormatString(buf[:], "(%d,%d,%d,%d)", cr, cg, cb, ca); buf_str = string_from_slice(buf[:l], false)
		if Selectable(buf_str) { SetClipboardText(buf_str) }
		l = FormatString(buf[:], "#%02X%02X%02X", cr, cg, cb); buf_str = string_from_slice(buf[:l], false)
		if Selectable(buf_str) { SetClipboardText(buf_str) }
		if (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) == {} {
			l = FormatString(buf[:], "#%02X%02X%02X%02X", cr, cg, cb, ca); buf_str = string_from_slice(buf[:l], false)
			if Selectable(buf_str) { SetClipboardText(buf_str) }
		}
		EndPopup()
	}

	g.ColorEditOptions = opts
	PopItemFlag()
	EndPopup()
}

ColorPickerOptionsPopup :: proc(ref_col : ^[4]f32, flags : ColorEditFlags)
{
	allow_opt_picker : bool = (flags & ColorEditFlags_.ColorEditFlags_PickerMask_) == {}
	allow_opt_alpha_bar : bool = (flags & ColorEditFlags_.ColorEditFlags_NoAlpha) == {} && (flags & ColorEditFlags_.ColorEditFlags_AlphaBar) == {}
	if (!allow_opt_picker && !allow_opt_alpha_bar) || !BeginPopup("context") { return }

	g : ^Context = GImGui
	PushItemFlag(cast(ItemFlags)ItemFlagsPrivate_.ItemFlags_NoMarkEdited, true)
	if allow_opt_picker {
		picker_size : Vec2 = { g.FontSize * 8, Max(g.FontSize * 8 - (GetFrameHeight() + g.Style.ItemInnerSpacing.x), 1.0) }; // FIXME: Picker size copied from main picker function
		PushItemWidth(picker_size.x)
		for picker_type : i32 = 0; picker_type < 2; picker_type += 1 {
			// Draw small/thumbnail version of each picker type (over an invisible button for selection)
			if picker_type > 0 { Separator() }
			PushID(picker_type)
			picker_flags : ColorEditFlags = ColorEditFlags_.ColorEditFlags_NoInputs | ColorEditFlags_.ColorEditFlags_NoOptions | ColorEditFlags_.ColorEditFlags_NoLabel | ColorEditFlags_.ColorEditFlags_NoSidePreview | (flags & ColorEditFlags_.ColorEditFlags_NoAlpha)
			if picker_type == 0 { picker_flags |= ColorEditFlags_.ColorEditFlags_PickerHueBar }
			if picker_type == 1 { picker_flags |= ColorEditFlags_.ColorEditFlags_PickerHueWheel }
			backup_pos : Vec2 = GetCursorScreenPos()
			if Selectable("##selectable", false, {}, picker_size) {
				// By default, Selectable() is closing popup
				g.ColorEditOptions = (g.ColorEditOptions & cast(ColorEditFlags)~cast(i32)ColorEditFlags_.ColorEditFlags_PickerMask_) | (picker_flags & ColorEditFlags_.ColorEditFlags_PickerMask_)
			}
			SetCursorScreenPos(backup_pos)
			previewing_ref_col : Vec4
			memcpy(&previewing_ref_col, ref_col, size_of(f32) * ((picker_flags & ColorEditFlags_.ColorEditFlags_NoAlpha) != {} ? 3 : 4))
			ColorPicker4("##previewing_picker", &previewing_ref_col, picker_flags)
			PopID()
		}

		PopItemWidth()
	}
	if allow_opt_alpha_bar {
		if allow_opt_picker { Separator() }
		CheckboxFlags("Alpha Bar", &g.ColorEditOptions, ColorEditFlags_.ColorEditFlags_AlphaBar)
	}
	PopItemFlag()
	EndPopup()
}

