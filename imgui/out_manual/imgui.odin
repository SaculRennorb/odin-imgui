// Helper: BitArray
IM_BITARRAY_TESTBIT :: #force_inline proc "contextless" (_ARRAY : [^]$T0, #any_int _N : u32) -> bool
{
	// Macro version of BitArrayTestBit(): ensure args have side-effect or are costly!
	return (_ARRAY[_N >> 5] & (1 << (_N & 31))) != 0
}

IM_BITARRAY_CLEARBIT :: #force_inline proc "contextless" (_ARRAY : [^]$T0, #any_int _N : u32)
{
	// Macro version of BitArrayClearBit(): ensure args have side-effect or are costly!
	_ARRAY[_N >> 5] &= ~(1 << (_N & 31))
}

BitArrayGetStorageSizeInBytes :: #force_inline proc(bitcount : i32) -> uint { return cast(uint) ((bitcount + 31) >> 5) << 2 }
BitArrayClearAllBits :: #force_inline proc(arr : [^]U32, bitcount : i32) { memset(arr, 0, cast(int) BitArrayGetStorageSizeInBytes(bitcount)) }
BitArrayTestBit :: #force_inline proc(arr : [^]U32, n : u32) -> bool
{
	mask : U32 = cast(U32) 1 << (n & 31); return (arr[n >> 5] & mask) != 0
}
BitArrayClearBit :: #force_inline proc(arr : [^]U32, n : u32)
{
	mask : U32 = cast(U32) 1 << (n & 31); arr[n >> 5] &= ~mask
}
BitArraySetBit :: #force_inline proc(arr : [^]U32, n : u32)
{
	mask : U32 = cast(U32) 1 << (n & 31); arr[n >> 5] |= mask
}
// Works on range [n..n2)
BitArraySetBitRange :: #force_inline proc(arr : [^]U32, n : u32, n2 : u32)
{
	n := n
	n2 := n2 - 1
	for n <= n2 {
		a_mod : u32 = (n & 31)
		b_mod : u32 = (n2 > (n | 31) ? 31 : (n2 & 31)) + 1
		mask : U32 = cast(U32) ((cast(U64) 1 << b_mod) - 1) & ~cast(U32) ((cast(U64) 1 << a_mod) - 1)
		arr[n >> 5] |= mask
		n = (n + 32) & ~u32(31)
	}
}

