GetModForLRModKey :: proc(key : Key) -> KeyChord
{
	if key == Key.Key_LeftCtrl || key == Key.Key_RightCtrl { return Key.Mod_Ctrl }
	if key == Key.Key_LeftShift || key == Key.Key_RightShift { return Key.Mod_Shift }
	if key == Key.Key_LeftAlt || key == Key.Key_RightAlt { return Key.Mod_Alt }
	if key == Key.Key_LeftSuper || key == Key.Key_RightSuper { return Key.Mod_Super }
	return Key.Mod_None
}

FixupKeyChord :: proc(key_chord : KeyChord) -> KeyChord
{
	key_chord := key_chord
	// Add Mod_XXXX when a corresponding Key_LeftXXX/Key_RightXXX is specified.
	key : Key = cast(Key) (key_chord & cast(Key) ~cast(i32) Key.Mod_Mask_)
	if IsLRModKey(key) { key_chord |= GetModForLRModKey(key) }
	return key_chord
}

