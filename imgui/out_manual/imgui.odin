ShowIDStackToolWindow :: proc(p_open : ^bool)
{
	g : ^Context = GImGui
	if (g.NextWindowData.Flags & NextWindowDataFlags_.NextWindowDataFlags_HasSize) == {} { SetNextWindowSize(Vec2{0.0, GetFontSize() * 8.0}, Cond_.Cond_FirstUseEver) }
