}

// did mouse button clicked? (went from !Down to Down). Same as GetMouseClickedCount() == 1.
IsMouseClicked_1 :: proc(button : MouseButton, flags : InputFlags, owner_id : ID = 0) -> bool
{
	g : ^Context = GImGui
	IM_ASSERT(button >= MouseButton(0) && button < cast(MouseButton) IM_ARRAYSIZE(g.IO.MouseDown))
	if !g.IO.MouseDown[button] {
		// In theory this should already be encoded as (DownDuration < 0.0f), but testing this facilitates eating mechanism (until we finish work on key ownership)
		return false
	}
	t : f32 = g.IO.MouseDownDuration[button]
	if t < 0.0 { return false }
	IM_ASSERT((flags & cast(InputFlags)~cast(i32)InputFlagsPrivate_.InputFlags_SupportedByIsMouseClicked) == {}); // Passing flags not supported by this function! // FIXME: Could support RepeatRate and RepeatUntil flags here.

	repeat : bool = (flags & InputFlags_.InputFlags_Repeat) != {}
	pressed : bool = (t == 0.0) || (repeat && t > g.IO.KeyRepeatDelay && CalcTypematicRepeatAmount(t - g.IO.DeltaTime, t, g.IO.KeyRepeatDelay, g.IO.KeyRepeatRate) > 0)
	if !pressed { return false }

	if !TestKeyOwner(MouseButtonToKey(button), owner_id) { return false }

	return true
}

