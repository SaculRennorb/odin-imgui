{
	step, step_fast := step, step_fast
	return InputScalar(label, DataType_.DataType_Double, cast(rawptr) v, cast(rawptr) (step > 0.0 ? &step : nil), cast(rawptr) (step_fast > 0.0 ? &step_fast : nil), format, flags)
