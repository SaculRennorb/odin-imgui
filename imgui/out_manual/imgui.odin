	this.ItemSpacing = Trunc(this.ItemSpacing * scale_factor)
	this.ItemInnerSpacing = Trunc(this.ItemInnerSpacing * scale_factor)
	this.CellPadding = Trunc(this.CellPadding * scale_factor)
	this.TouchExtraPadding = Trunc(this.TouchExtraPadding * scale_factor)
