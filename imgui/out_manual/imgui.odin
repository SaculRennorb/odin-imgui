GDataTypeInfo := [?]DataTypeInfo { // @cleanup
	{size_of(u8), "S8", "%d", "%d"}, // DataType_S8
	{size_of(u8), "U8", "%u", "%u"},
	{size_of(i16), "S16", "%d", "%d"}, // DataType_S16
	{size_of(u16), "U16", "%u", "%u"},
	{size_of(i32), "S32", "%d", "%d"}, // DataType_S32
	{size_of(u32), "U32", "%u", "%u"},
	{size_of(S64), "S64", "%I64d", "%I64d"}, // DataType_S64
	{size_of(U64), "U64", "%I64u", "%I64u"},
	{size_of(f32), "float", "%.3f", "%f"}, // DataType_Float (float are promoted to double in va_arg)
	{size_of(f64), "double", "%f", "%lf"}, // DataType_Double
	{size_of(bool), "bool", "%d", "%d"}, // DataType_Bool
	{0, "char*", "%s", "%s"}, // DataType_String
}
#assert(len(GDataTypeInfo) == int(DataType_.DataType_COUNT))

DataTypeGetInfo :: proc(data_type : DataType) -> ^DataTypeInfo
{
	IM_ASSERT(data_type >= DataType(0) && data_type < DataType_.DataType_COUNT)
	return &GDataTypeInfo[data_type]
}

DataTypeFormatString :: proc(buf : []u8, data_type : DataType, p_data : rawptr, format : string) -> i32
{
	// Signedness doesn't matter when pushing integer arguments
	if data_type == DataType_.DataType_S32 || data_type == DataType_.DataType_U32 { return FormatString(buf, format, (cast(^U32) p_data)^) }
	if data_type == DataType_.DataType_S64 || data_type == DataType_.DataType_U64 { return FormatString(buf, format, (cast(^U64) p_data)^) }
	if data_type == DataType_.DataType_Float { return FormatString(buf, format, (cast(^f32) p_data)^) }
	if data_type == DataType_.DataType_Double { return FormatString(buf, format, (cast(^f64) p_data)^) }
	if data_type == DataType_.DataType_S8 { return FormatString(buf, format, (cast(^S8) p_data)^) }
	if data_type == DataType_.DataType_U8 { return FormatString(buf, format, (cast(^U8) p_data)^) }
	if data_type == DataType_.DataType_S16 { return FormatString(buf, format, (cast(^S16) p_data)^) }
	if data_type == DataType_.DataType_U16 { return FormatString(buf, format, (cast(^U16) p_data)^) }
	IM_ASSERT(false)
	return 0
}

DataTypeApplyOp :: proc(data_type : DataType, op : i32, output : rawptr, arg1 : rawptr, arg2 : rawptr)
{
	IM_ASSERT(op == '+' || op == '-')
	#partial switch data_type {
		case DataType_.DataType_S8:
			if op == '+' { (cast(^S8) output)^ = AddClampOverflow((cast(^S8) arg1)^, (cast(^S8) arg2)^, IM_S8_MIN, IM_S8_MAX) }
			if op == '-' { (cast(^S8) output)^ = SubClampOverflow((cast(^S8) arg1)^, (cast(^S8) arg2)^, IM_S8_MIN, IM_S8_MAX) }
			return
		case DataType_.DataType_U8:
			if op == '+' { (cast(^U8) output)^ = AddClampOverflow((cast(^U8) arg1)^, (cast(^U8) arg2)^, IM_U8_MIN, IM_U8_MAX) }
			if op == '-' { (cast(^U8) output)^ = SubClampOverflow((cast(^U8) arg1)^, (cast(^U8) arg2)^, IM_U8_MIN, IM_U8_MAX) }
			return
		case DataType_.DataType_S16:
			if op == '+' { (cast(^S16) output)^ = AddClampOverflow((cast(^S16) arg1)^, (cast(^S16) arg2)^, IM_S16_MIN, IM_S16_MAX) }
			if op == '-' { (cast(^S16) output)^ = SubClampOverflow((cast(^S16) arg1)^, (cast(^S16) arg2)^, IM_S16_MIN, IM_S16_MAX) }
			return
		case DataType_.DataType_U16:
			if op == '+' { (cast(^U16) output)^ = AddClampOverflow((cast(^U16) arg1)^, (cast(^U16) arg2)^, IM_U16_MIN, IM_U16_MAX) }
			if op == '-' { (cast(^U16) output)^ = SubClampOverflow((cast(^U16) arg1)^, (cast(^U16) arg2)^, IM_U16_MIN, IM_U16_MAX) }
			return
		case DataType_.DataType_S32:
			if op == '+' { (cast(^S32) output)^ = AddClampOverflow((cast(^S32) arg1)^, (cast(^S32) arg2)^, IM_S32_MIN, IM_S32_MAX) }
			if op == '-' { (cast(^S32) output)^ = SubClampOverflow((cast(^S32) arg1)^, (cast(^S32) arg2)^, IM_S32_MIN, IM_S32_MAX) }
			return
		case DataType_.DataType_U32:
			if op == '+' { (cast(^U32) output)^ = AddClampOverflow((cast(^U32) arg1)^, (cast(^U32) arg2)^, IM_U32_MIN, IM_U32_MAX) }
			if op == '-' { (cast(^U32) output)^ = SubClampOverflow((cast(^U32) arg1)^, (cast(^U32) arg2)^, IM_U32_MIN, IM_U32_MAX) }
			return
		case DataType_.DataType_S64:
			if op == '+' { (cast(^S64) output)^ = AddClampOverflow((cast(^S64) arg1)^, (cast(^S64) arg2)^, IM_S64_MIN, IM_S64_MAX) }
			if op == '-' { (cast(^S64) output)^ = SubClampOverflow((cast(^S64) arg1)^, (cast(^S64) arg2)^, IM_S64_MIN, IM_S64_MAX) }
			return
		case DataType_.DataType_U64:
			if op == '+' { (cast(^U64) output)^ = AddClampOverflow((cast(^U64) arg1)^, (cast(^U64) arg2)^, IM_U64_MIN, IM_U64_MAX) }
			if op == '-' { (cast(^U64) output)^ = SubClampOverflow((cast(^U64) arg1)^, (cast(^U64) arg2)^, IM_U64_MIN, IM_U64_MAX) }
			return
		case DataType_.DataType_Float:
			if op == '+' { (cast(^f32) output)^ = (cast(^f32) arg1)^ + (cast(^f32) arg2)^ }
			if op == '-' { (cast(^f32) output)^ = (cast(^f32) arg1)^ - (cast(^f32) arg2)^ }
			return
		case DataType_.DataType_Double:
			if op == '+' { (cast(^f64) output)^ = (cast(^f64) arg1)^ + (cast(^f64) arg2)^ }
			if op == '-' { (cast(^f64) output)^ = (cast(^f64) arg1)^ - (cast(^f64) arg2)^ }
			return
		case DataType_.DataType_COUNT:break
	}
	IM_ASSERT(false)
}

// User can input math operators (e.g. +100) to edit a numerical values.
// NB: This is _not_ a full expression evaluator. We should probably add one and replace this dumb mess..
DataTypeApplyFromText :: proc(buf : []u8, data_type : DataType, p_data : rawptr, format : string, p_data_when_empty : rawptr) -> bool
{
	// Copy the value in an opaque buffer so we can compare at the end of the function if it changed at all.
	type_info : ^DataTypeInfo = DataTypeGetInfo(data_type)
	data_backup : DataTypeStorage
	memcpy(&data_backup, p_data, int(type_info.Size))

	buf := buf
	for CharIsBlankA(buf[0]) { buf = buf[1:] }

	if buf[0] == 0 {
		if p_data_when_empty != nil {
			memcpy(p_data, p_data_when_empty, cast(int)type_info.Size)
			return memcmp(&data_backup, p_data, type_info.Size) != 0
		}
		return false
	}

	format := format
	// Sanitize format
	// - For float/double we have to ignore format with precision (e.g. "%.2f") because sscanf doesn't take them in, so force them into %f and %lf
	// - In theory could treat empty format as using default, but this would only cover rare/bizarre case of using InputScalar() + integer + format string without %.
	format_sanitized : [32]u8
	if data_type == DataType_.DataType_Float || data_type == DataType_.DataType_Double { format = type_info.ScanFmt }
	else { format = ParseFormatSanitizeForScanning(format, format_sanitized[:]) }

	// Small types need a 32-bit buffer to receive the result from scanf()
	v32 : i32 = 0
	if sscanf(buf, format, type_info.Size >= 4 ? p_data : cast(rawptr)&v32) < 1 { return false }
	if type_info.Size < 4 {
		if data_type == DataType_.DataType_S8 { (cast(^S8) p_data)^ = cast(S8) Clamp(v32, cast(i32) IM_S8_MIN, cast(i32) IM_S8_MAX) }
		else if data_type == DataType_.DataType_U8 { (cast(^U8) p_data)^ = cast(U8) Clamp(v32, cast(i32) IM_U8_MIN, cast(i32) IM_U8_MAX) }
		else if data_type == DataType_.DataType_S16 { (cast(^S16) p_data)^ = cast(S16) Clamp(v32, cast(i32) IM_S16_MIN, cast(i32) IM_S16_MAX) }
		else if data_type == DataType_.DataType_U16 { (cast(^U16) p_data)^ = cast(U16) Clamp(v32, cast(i32) IM_U16_MIN, cast(i32) IM_U16_MAX) }
		else { IM_ASSERT(false) }
	}

	return memcmp(&data_backup, p_data, type_info.Size) != 0
}

DataTypeCompareT :: proc($T : typeid, lhs : ^T, rhs : ^T) -> i32
{
	if lhs^ < rhs^ { return -1 }
	if lhs^ > rhs^ { return +1 }
	return 0
}

DataTypeCompare :: proc(data_type : DataType, arg_1 : rawptr, arg_2 : rawptr) -> i32
{
	#partial switch data_type {
		case DataType_.DataType_S8:return DataTypeCompareT(S8, cast(^S8) arg_1, cast(^S8) arg_2)
		case DataType_.DataType_U8:return DataTypeCompareT(U8, cast(^U8) arg_1, cast(^U8) arg_2)
		case DataType_.DataType_S16:return DataTypeCompareT(S16, cast(^S16) arg_1, cast(^S16) arg_2)
		case DataType_.DataType_U16:return DataTypeCompareT(U16, cast(^U16) arg_1, cast(^U16) arg_2)
		case DataType_.DataType_S32:return DataTypeCompareT(S32, cast(^S32) arg_1, cast(^S32) arg_2)
		case DataType_.DataType_U32:return DataTypeCompareT(U32, cast(^U32) arg_1, cast(^U32) arg_2)
		case DataType_.DataType_S64:return DataTypeCompareT(S64, cast(^S64) arg_1, cast(^S64) arg_2)
		case DataType_.DataType_U64:return DataTypeCompareT(U64, cast(^U64) arg_1, cast(^U64) arg_2)
		case DataType_.DataType_Float:return DataTypeCompareT(f32, cast(^f32) arg_1, cast(^f32) arg_2)
		case DataType_.DataType_Double:return DataTypeCompareT(f64, cast(^f64) arg_1, cast(^f64) arg_2)
		case DataType_.DataType_COUNT:break
	}
	IM_ASSERT(false)
	return 0
}

DataTypeClampT :: proc($T : typeid, v : ^T, v_min : ^T, v_max : ^T) -> bool
{
	// Clamp, both sides are optional, return true if modified
	if v_min != nil && v^ < v_min^ { v^ = v_min^; return true }
	if v_max != nil && v^ > v_max^ { v^ = v_max^; return true }
	return false
}

DataTypeClamp :: proc(data_type : DataType, p_data : rawptr, p_min : rawptr, p_max : rawptr) -> bool
{
	#partial switch data_type {
		case DataType_.DataType_S8:return DataTypeClampT(S8, cast(^S8) p_data, cast(^S8) p_min, cast(^S8) p_max)
		case DataType_.DataType_U8:return DataTypeClampT(U8, cast(^U8) p_data, cast(^U8) p_min, cast(^U8) p_max)
		case DataType_.DataType_S16:return DataTypeClampT(S16, cast(^S16) p_data, cast(^S16) p_min, cast(^S16) p_max)
		case DataType_.DataType_U16:return DataTypeClampT(U16, cast(^U16) p_data, cast(^U16) p_min, cast(^U16) p_max)
		case DataType_.DataType_S32:return DataTypeClampT(S32, cast(^S32) p_data, cast(^S32) p_min, cast(^S32) p_max)
		case DataType_.DataType_U32:return DataTypeClampT(U32, cast(^U32) p_data, cast(^U32) p_min, cast(^U32) p_max)
		case DataType_.DataType_S64:return DataTypeClampT(S64, cast(^S64) p_data, cast(^S64) p_min, cast(^S64) p_max)
		case DataType_.DataType_U64:return DataTypeClampT(U64, cast(^U64) p_data, cast(^U64) p_min, cast(^U64) p_max)
		case DataType_.DataType_Float:return DataTypeClampT(f32, cast(^f32) p_data, cast(^f32) p_min, cast(^f32) p_max)
		case DataType_.DataType_Double:return DataTypeClampT(f64, cast(^f64) p_data, cast(^f64) p_min, cast(^f64) p_max)
		case DataType_.DataType_COUNT:break
	}
	IM_ASSERT(false)
	return false
}

DataTypeIsZero :: proc(data_type : DataType, p_data : rawptr) -> bool
{
	g : ^Context = GImGui
	return DataTypeCompare(data_type, p_data, &g.DataTypeZeroValue) == 0
}

GetMinimumStepAtDecimalPrecision :: proc(decimal_precision : i32) -> f32
{
	min_steps : [10]f32 = {1.0, 0.1, 0.01, 0.001, 0.0001, 0.00001, 0.000001, 0.0000001, 0.00000001, 0.000000001}
	if decimal_precision < 0 { return min(f32) }
	return (decimal_precision < cast(i32)IM_ARRAYSIZE(min_steps)) ? min_steps[decimal_precision] : Pow(10.0, cast(f32) -decimal_precision)
}

RoundScalarWithFormatT :: proc($TYPE : typeid, format : string, data_type : DataType, v : TYPE) -> TYPE
{
	IM_UNUSED(data_type)
	IM_ASSERT(data_type == DataType_.DataType_Float || data_type == DataType_.DataType_Double)
	fmt_start := ParseFormatFindStart(format)
	if fmt_start[0] != '%' || fmt_start[1] == '%' {
		// Don't apply if the value is not visible in the format string
		return v
	}

	// Sanitize format
	fmt_sanitized : [32]u8
	fmt_start = ParseFormatSanitizeForPrinting(fmt_start, fmt_sanitized[:])

	// Format value with our rounding, and read back
	v_str : [64]u8
	l := FormatString(v_str[:], fmt_start, v)
	p := string_from_slice(v_str[:l])
	for p[0] == ' ' { p = p[1:] }

	v := cast(TYPE) Atof(p)

	return v
}

//-------------------------------------------------------------------------
// [SECTION] Widgets: DragScalar, DragFloat, DragInt, etc.
//-------------------------------------------------------------------------
// - DragBehaviorT<>() [Internal]
// - DragBehavior() [Internal]
// - DragScalar()
// - DragScalarN()
// - DragFloat()
// - DragFloat2()
// - DragFloat3()
// - DragFloat4()
// - DragFloatRange2()
// - DragInt()
// - DragInt2()
// - DragInt3()
// - DragInt4()
// - DragIntRange2()
//-------------------------------------------------------------------------

// This is called by DragBehavior() when the widget is active (held by mouse or being manipulated with Nav controls)
DragBehaviorT :: proc($TYPE : typeid, $SIGNEDTYPE : typeid, $FLOATTYPE : typeid, data_type : DataType, v : ^TYPE, v_speed : f32, v_min : TYPE, v_max : TYPE, format : string, flags : SliderFlags) -> bool
{
	g : ^Context = GImGui
	axis : Axis = (flags & cast(SliderFlags) SliderFlagsPrivate_.SliderFlags_Vertical) != {} ? Axis.Axis_Y : Axis.Axis_X
	is_bounded : bool = (v_min < v_max) || ((v_min == v_max) && (v_min != 0.0 || (flags & SliderFlags_.SliderFlags_ClampZeroRange) != {}))
	is_wrapped : bool = is_bounded && (flags & SliderFlags_.SliderFlags_WrapAround) != {}
	is_logarithmic : bool = (flags & SliderFlags_.SliderFlags_Logarithmic) != {}
	is_floating_point : bool = (data_type == DataType_.DataType_Float) || (data_type == DataType_.DataType_Double)

	v_speed := v_speed
	// Default tweak speed
	if v_speed == 0.0 && is_bounded && ((v_max - v_min) < max(TYPE)) { v_speed = (cast(f32)(v_max - v_min) * g.DragSpeedDefaultRatio) }

	// Inputs accumulates into g.DragCurrentAccum, which is flushed into the current value as soon as it makes a difference with our precision settings
	adjust_delta : f32 = 0.0
	if g.ActiveIdSource == InputSource.InputEventType_Mouse && IsMousePosValid() && IsMouseDragPastThreshold(MouseButton(0), g.IO.MouseDragThreshold * DRAG_MOUSE_THRESHOLD_FACTOR) {
		adjust_delta = g.IO.MouseDelta[axis]
		if g.IO.KeyAlt && (flags & SliderFlags_.SliderFlags_NoSpeedTweaks) == {} { adjust_delta *= 1.0 / 100.0 }
		if g.IO.KeyShift && (flags & SliderFlags_.SliderFlags_NoSpeedTweaks) == {} { adjust_delta *= 10.0 }
	}
	else if g.ActiveIdSource == InputSource.InputSource_Keyboard || g.ActiveIdSource == InputSource.InputSource_Gamepad {
		decimal_precision : i32 = is_floating_point ? ParseFormatPrecision(format, 3) : 0
		tweak_slow : bool = IsKeyDown((g.NavInputSource == InputSource.InputSource_Gamepad) ? Key_NavGamepadTweakSlow : Key_NavKeyboardTweakSlow)
		tweak_fast : bool = IsKeyDown((g.NavInputSource == InputSource.InputSource_Gamepad) ? Key_NavGamepadTweakFast : Key_NavKeyboardTweakFast)
		tweak_factor : f32 = (flags & SliderFlags_.SliderFlags_NoSpeedTweaks) != {} ? 1.0 : tweak_slow ? 1.0 / 10.0 : tweak_fast ? 10.0 : 1.0
		adjust_delta = GetNavTweakPressedAmount(axis) * tweak_factor
		v_speed = Max(v_speed, GetMinimumStepAtDecimalPrecision(decimal_precision))
	}
	adjust_delta *= v_speed

	// For vertical drag we currently assume that Up=higher value (like we do with vertical sliders). This may become a parameter.
	if axis == Axis.Axis_Y { adjust_delta = -adjust_delta }

	// For logarithmic use our range is effectively 0..1 so scale the delta into that range
	if is_logarithmic && (v_max - v_min < max(TYPE)) && (f32(v_max - v_min) > 0.000001) {
		// Epsilon to avoid /0
		adjust_delta /= cast(f32) (v_max - v_min)
	}

	// Clear current value on activation
	// Avoid altering values and clamping when we are _already_ past the limits and heading in the same direction, so e.g. if range is 0..255, current value is 300 and we are pushing to the right side, keep the 300.
	is_just_activated : bool = g.ActiveIdIsJustActivated
	is_already_past_limits_and_pushing_outward : bool = is_bounded && !is_wrapped && ((v^ >= v_max && adjust_delta > 0.0) || (v^ <= v_min && adjust_delta < 0.0))
	if is_just_activated || is_already_past_limits_and_pushing_outward {
		g.DragCurrentAccum = 0.0
		g.DragCurrentAccumDirty = false
	}
	else if adjust_delta != 0.0 {
		g.DragCurrentAccum += adjust_delta
		g.DragCurrentAccumDirty = true
	}

	if !g.DragCurrentAccumDirty { return false }

	v_cur : TYPE = v^
	v_old_ref_for_accum_remainder : FLOATTYPE = cast(FLOATTYPE) 0.0

	logarithmic_zero_epsilon : f32 = 0.0; // Only valid when is_logarithmic is true
	zero_deadzone_halfsize : f32 = 0.0; // Drag widgets have no deadzone (as it doesn't make sense)
	if is_logarithmic {
		// When using logarithmic sliders, we need to clamp to avoid hitting zero, but our choice of clamp value greatly affects slider precision. We attempt to use the specified precision to estimate a good lower bound.
		decimal_precision : i32 = is_floating_point ? ParseFormatPrecision(format, 3) : 1
		logarithmic_zero_epsilon = Pow(0.1, cast(f32) decimal_precision)

		// Convert to parametric space, apply delta, convert back
		v_old_parametric : f32 = ScaleRatioFromValueT(TYPE, SIGNEDTYPE, FLOATTYPE, data_type, v_cur, v_min, v_max, is_logarithmic, logarithmic_zero_epsilon, zero_deadzone_halfsize)
		v_new_parametric : f32 = v_old_parametric + g.DragCurrentAccum
		v_cur = ScaleValueFromRatioT(TYPE, SIGNEDTYPE, FLOATTYPE, data_type, v_new_parametric, v_min, v_max, is_logarithmic, logarithmic_zero_epsilon, zero_deadzone_halfsize)
		v_old_ref_for_accum_remainder = FLOATTYPE(v_old_parametric)
	}
	else {
		v_cur += cast(TYPE) g.DragCurrentAccum
	}

	// Round to user desired precision based on format string
	if is_floating_point && (flags & SliderFlags_.SliderFlags_NoRoundToFormat) == {} { v_cur = RoundScalarWithFormatT(TYPE, format, data_type, v_cur) }

	// Preserve remainder after rounding has been applied. This also allow slow tweaking of values.
	g.DragCurrentAccumDirty = false
	if is_logarithmic {
		// Convert to parametric space, apply delta, convert back
		v_new_parametric := cast(FLOATTYPE) ScaleRatioFromValueT(TYPE, SIGNEDTYPE, FLOATTYPE, data_type, v_cur, v_min, v_max, is_logarithmic, logarithmic_zero_epsilon, zero_deadzone_halfsize)
		g.DragCurrentAccum -= cast(f32) (v_new_parametric - v_old_ref_for_accum_remainder)
	}
	else {
		g.DragCurrentAccum -= cast(f32) (cast(SIGNEDTYPE) v_cur - cast(SIGNEDTYPE) v^)
	}

	// Lose zero sign for float/double
	if v_cur == cast(TYPE) -0 { v_cur = cast(TYPE) 0 }

	if v^ != v_cur && is_bounded {
		if is_wrapped {
			// Wrap values
			if v_cur < v_min { v_cur += v_max - v_min + (is_floating_point ? 0 : 1) }
			if v_cur > v_max { v_cur -= v_max - v_min + (is_floating_point ? 0 : 1) }
		}
		else {
			// Clamp values + handle overflow/wrap-around for integer types.
			if v_cur < v_min || (v_cur > v^ && adjust_delta < 0.0 && !is_floating_point) { v_cur = v_min }
			if v_cur > v_max || (v_cur < v^ && adjust_delta > 0.0 && !is_floating_point) { v_cur = v_max }
		}
	}

	// Apply result
	if v^ == v_cur { return false }
	v^ = v_cur
	return true
}

DragBehavior :: proc(id : ID, data_type : DataType, p_v : rawptr, v_speed : f32, p_min : rawptr, p_max : rawptr, format : string, flags : SliderFlags) -> bool
{
	// Read imgui.cpp "API BREAKING CHANGES" section for 1.78 if you hit this assert.
	IM_ASSERT((flags == SliderFlags(1) || (flags & SliderFlags_.SliderFlags_InvalidMask_) == {}), "Invalid SliderFlags flags! Has the legacy 'float power' argument been mistakenly cast to flags? Call function with SliderFlags_Logarithmic flags instead.")

	g : ^Context = GImGui
	if g.ActiveId == id {
		// Those are the things we can do easily outside the DragBehaviorT<> template, saves code generation.
		if g.ActiveIdSource == InputSource.InputEventType_Mouse && !g.IO.MouseDown[0] { ClearActiveID() }
		else if (g.ActiveIdSource == InputSource.InputSource_Keyboard || g.ActiveIdSource == InputSource.InputSource_Gamepad) && g.NavActivatePressedId == id && !g.ActiveIdIsJustActivated { ClearActiveID() }
	}
	if g.ActiveId != id { return false }
	if (g.LastItemData.ItemFlags & cast(ItemFlags) ItemFlagsPrivate_.ItemFlags_ReadOnly) != {} || (flags & cast(SliderFlags) SliderFlagsPrivate_.SliderFlags_ReadOnly) != {} { return false }

	#partial switch data_type {
		case DataType_.DataType_S8:{v32 : S32 = cast(S32) (cast(^S8) p_v)^; r : bool = DragBehaviorT(S32, S32, f32, DataType_.DataType_S32, &v32, v_speed, S32(p_min != nil ? (cast(^S8) p_min)^ : IM_S8_MIN), S32(p_max != nil ? (cast(^S8) p_max)^ : IM_S8_MAX), format, flags); if r { (cast(^S8) p_v)^ = cast(S8) v32 }; return r}
			fallthrough
		case DataType_.DataType_U8:{v32 : U32 = cast(U32) (cast(^U8) p_v)^; r : bool = DragBehaviorT(U32, S32, f32, DataType_.DataType_U32, &v32, v_speed, U32(p_min != nil ? (cast(^U8) p_min)^ : IM_U8_MIN), U32(p_max != nil ? (cast(^U8) p_max)^ : IM_U8_MAX), format, flags); if r { (cast(^U8) p_v)^ = cast(U8) v32 }; return r}
			fallthrough
		case DataType_.DataType_S16:{v32 : S32 = cast(S32) (cast(^S16) p_v)^; r : bool = DragBehaviorT(S32, S32, f32, DataType_.DataType_S32, &v32, v_speed, S32(p_min != nil ? (cast(^S16) p_min)^ : IM_S16_MIN), S32(p_max != nil ? (cast(^S16) p_max)^ : IM_S16_MAX), format, flags); if r { (cast(^S16) p_v)^ = cast(S16) v32 }; return r}
			fallthrough
		case DataType_.DataType_U16:{v32 : U32 = cast(U32) (cast(^U16) p_v)^; r : bool = DragBehaviorT(U32, S32, f32, DataType_.DataType_U32, &v32, v_speed, U32(p_min != nil ? (cast(^U16) p_min)^ : IM_U16_MIN), U32(p_max != nil ? (cast(^U16) p_max)^ : IM_U16_MAX), format, flags); if r { (cast(^U16) p_v)^ = cast(U16) v32 }; return r}
			fallthrough
		case DataType_.DataType_S32:return DragBehaviorT(S32, S32, f32, data_type, cast(^S32) p_v, v_speed, p_min != nil ? (cast(^S32) p_min)^ : IM_S32_MIN, p_max != nil ? (cast(^S32) p_max)^ : IM_S32_MAX, format, flags)
		case DataType_.DataType_U32:return DragBehaviorT(U32, S32, f32, data_type, cast(^U32) p_v, v_speed, p_min != nil ? (cast(^U32) p_min)^ : IM_U32_MIN, p_max != nil ? (cast(^U32) p_max)^ : IM_U32_MAX, format, flags)
		case DataType_.DataType_S64:return DragBehaviorT(S64, S64, f64, data_type, cast(^S64) p_v, v_speed, p_min != nil ? (cast(^S64) p_min)^ : IM_S64_MIN, p_max != nil ? (cast(^S64) p_max)^ : IM_S64_MAX, format, flags)
		case DataType_.DataType_U64:return DragBehaviorT(U64, S64, f64, data_type, cast(^U64) p_v, v_speed, p_min != nil ? (cast(^U64) p_min)^ : IM_U64_MIN, p_max != nil ? (cast(^U64) p_max)^ : IM_U64_MAX, format, flags)
		case DataType_.DataType_Float:return DragBehaviorT(f32, f32, f32, data_type, cast(^f32) p_v, v_speed, p_min != nil ? (cast(^f32) p_min)^ : -FLT_MAX, p_max != nil ? (cast(^f32) p_max)^ : FLT_MAX, format, flags)
		case DataType_.DataType_Double:return DragBehaviorT(f64, f64, f64, data_type, cast(^f64) p_v, v_speed, p_min != nil ? (cast(^f64) p_min)^ : -DBL_MAX, p_max != nil ? (cast(^f64) p_max)^ : DBL_MAX, format, flags)
		case DataType_.DataType_COUNT:break
	}
	IM_ASSERT(false)
	return false
}

// Note: p_data, p_min and p_max are _pointers_ to a memory address holding the data. For a Drag widget, p_min and p_max are optional.
// Read code of e.g. DragFloat(), DragInt() etc. or examples in 'Demo->Widgets->Data Types' to understand how to use this function directly.
DragScalar :: proc(label : string, data_type : DataType, p_data : rawptr, v_speed : f32 = 1, p_min : rawptr = nil, p_max : rawptr = nil, format : string = "", flags : SliderFlags = {}) -> bool
{
	window : ^Window = GetCurrentWindow()
	if window.SkipItems { return false }

	g : ^Context = GImGui
	style : ^Style = &g.Style
	id : ID = GetID(window, label)
	w : f32 = CalcItemWidth()

	label_size : Vec2 = CalcTextSize(label, true)
	frame_bb : Rect; init(&frame_bb, window.DC.CursorPos, window.DC.CursorPos + Vec2{w, label_size.y + style.FramePadding.y * 2.0})
	total_bb : Rect; init(&total_bb, frame_bb.Min, frame_bb.Max + Vec2{label_size.x > 0.0 ? style.ItemInnerSpacing.x + label_size.x : 0.0, 0.0})

	temp_input_allowed : bool = (flags & SliderFlags_.SliderFlags_NoInput) == {}
	ItemSize(total_bb, style.FramePadding.y)
	if !ItemAdd(total_bb, id, &frame_bb, temp_input_allowed ? cast(ItemFlags)ItemFlagsPrivate_.ItemFlags_Inputable : {}) { return false }

	format := format
	// Default format string when passing NULL
	if format == "" { format = DataTypeGetInfo(data_type).PrintFmt }

	hovered : bool = ItemHoverable(frame_bb, id, g.LastItemData.ItemFlags)
	temp_input_is_active : bool = temp_input_allowed && TempInputIsActive(id)
	if !temp_input_is_active {
		// Tabbing or CTRL-clicking on Drag turns it into an InputText
		clicked : bool = hovered && IsMouseClicked(MouseButton(0), InputFlags_.InputFlags_None, id)
		double_clicked : bool = (hovered && g.IO.MouseClickedCount[0] == 2 && TestKeyOwner(Key.Key_MouseLeft, id))
		make_active : bool = (clicked || double_clicked || g.NavActivateId == id)
		if make_active && (clicked || double_clicked) { SetKeyOwner(Key.Key_MouseLeft, id) }
		if make_active && temp_input_allowed { if (clicked && g.IO.KeyCtrl) || double_clicked || (g.NavActivateId == id && (g.NavActivateFlags & ActivateFlags_.ActivateFlags_PreferInput) != {}) { temp_input_is_active = true } }

		// (Optional) simple click (without moving) turns Drag into an InputText
		if g.IO.ConfigDragClickToInputText && temp_input_allowed && !temp_input_is_active {
			if g.ActiveId == id && hovered && g.IO.MouseReleased[0] && !IsMouseDragPastThreshold(MouseButton(0), g.IO.MouseDragThreshold * DRAG_MOUSE_THRESHOLD_FACTOR) {
				g.NavActivateId = id
				g.NavActivateFlags = ActivateFlags_.ActivateFlags_PreferInput
				temp_input_is_active = true
			}
		}

		// Store initial value (not used by main lib but available as a convenience but some mods e.g. to revert)
		if make_active { memcpy(&g.ActiveIdValueOnActivation, p_data, cast(int)DataTypeGetInfo(data_type).Size) }

		if make_active && !temp_input_is_active {
			SetActiveID(id, window)
			SetFocusID(id, window)
			FocusWindow(window)
			g.ActiveIdUsingNavDirMask = (1 << cast(u32)Dir.Dir_Left) | (1 << cast(u32)Dir.Dir_Right)
		}
	}

	if temp_input_is_active {
		// Only clamp CTRL+Click input when SliderFlags_ClampOnInput is set (generally via SliderFlags_AlwaysClamp)
		clamp_enabled : bool = false
		if (flags & SliderFlags_.SliderFlags_ClampOnInput) != {} && (p_min != nil || p_max != nil) {
			clamp_range_dir : i32 = (p_min != nil && p_max != nil) ? DataTypeCompare(data_type, p_min, p_max) : 0; // -1 when *p_min < *p_max, == 0 when *p_min == *p_max
			if p_min == nil || p_max == nil || clamp_range_dir < 0 { clamp_enabled = true }
			else if clamp_range_dir == 0 { clamp_enabled = DataTypeIsZero(data_type, p_min) ? ((flags & SliderFlags_.SliderFlags_ClampZeroRange) != {}) : true }
		}
		return TempInputScalar(frame_bb, id, label, data_type, p_data, format, clamp_enabled ? p_min : nil, clamp_enabled ? p_max : nil)
	}

	// Draw frame
	frame_col : U32 = GetColorU32(g.ActiveId == id ? Col_.Col_FrameBgActive : (hovered ? Col_.Col_FrameBgHovered : Col_.Col_FrameBg))
	RenderNavCursor(frame_bb, id)
	RenderFrame(frame_bb.Min, frame_bb.Max, frame_col, true, style.FrameRounding)

	// Drag behavior
	value_changed : bool = DragBehavior(id, data_type, p_data, v_speed, p_min, p_max, format, flags)
	if value_changed { MarkItemEdited(id) }

	// Display value using user-provided display format so user can add prefix/suffix/decorations to the value.
	value_buf : [64]u8
	value_buf_len := DataTypeFormatString(value_buf[:], data_type, p_data, format)
	if g.LogEnabled { LogSetNextTextDecoration("{", "}") }
	RenderTextClipped(frame_bb.Min, frame_bb.Max, string_from_slice(value_buf[:value_buf_len], false), nil, Vec2{0.5, 0.5})

	if label_size.x > 0.0 { RenderText(Vec2{frame_bb.Max.x + style.ItemInnerSpacing.x, frame_bb.Min.y + style.FramePadding.y}, label) }

	when IMGUI_ENABLE_TEST_ENGINE {
		if(g.TestEngineHookItems) {
			TestEngineHook_ItemInfo(g, id, label, g.LastItemData.StatusFlags | (temp_input_allowed ? ItemStatusFlags_.ItemStatusFlags_Inputable : {}))
		}
	}
	return value_changed
}

DragScalarN :: proc(label : string, data_type : DataType, p_data : rawptr, components : i32, v_speed : f32 = 1, p_min : rawptr = nil, p_max : rawptr = nil, format : string = "", flags : SliderFlags = {}) -> bool
{
	window : ^Window = GetCurrentWindow()
	if window.SkipItems { return false }

	p_data := p_data
	g : ^Context = GImGui
	value_changed : bool = false
	BeginGroup()
	PushID(label)
	PushMultiItemsWidths(components, CalcItemWidth())
	type_size : uint = GDataTypeInfo[data_type].Size
	for i : i32 = 0; i < components; i += 1 {
		PushID(i)
		if i > 0 { SameLine(0, g.Style.ItemInnerSpacing.x) }
		value_changed |= DragScalar("", data_type, p_data, v_speed, p_min, p_max, format, flags)
		PopID()
		PopItemWidth()
		p_data = cast(rawptr) ((cast([^]u8)p_data)[type_size:])
	}

	PopID()

	label_end := FindRenderedTextEnd(label)
	if len(label) != label_end {
		SameLine(0, g.Style.ItemInnerSpacing.x)
		TextEx(label[:label_end])
	}

	EndGroup()
	return value_changed
}

