// Push given value as-is at the top of the ID stack (whereas PushID combines old and new hashes)
// Push a given id value ignoring the ID stack as a seed.
PushOverrideID :: proc(id : ID)
{
	g : ^Context = GImGui
	window : ^Window = g.CurrentWindow
	when ! IMGUI_DISABLE_DEBUG_TOOLS { /* @gen ifndef */
	if g.DebugHookIdInfo == id { DebugHookIdInfo(id, cast(DataType) DataTypePrivate_.DataType_ID, nil, nil) }
	} // preproc endif
