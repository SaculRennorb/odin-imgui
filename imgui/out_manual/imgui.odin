// Default file functions
when ! IMGUI_DISABLE_DEFAULT_FILE_FUNCTIONS {

FileOpen :: proc(filename : string, mode : string) -> FileHandle
{
	m : int
	switch mode {
		case "r": m = os.O_RDONLY
		case "w": m = os.O_WRONLY
		case "rw", "wr": m = os.O_RDWR
		case "a": m = os.O_APPEND
	}
	h, err := os.open(filename, m)
	return err == nil ? h : os.INVALID_HANDLE
}

// We should in theory be using fseeko()/ftello() with off_t and _fseeki64()/_ftelli64() with __int64, waiting for the PR that does that in a very portable pre-C++11 zero-warnings way.
FileClose :: proc(f : FileHandle) -> bool { return os.close(f) == nil }
FileGetSize :: proc(f : FileHandle) -> U64
{
	s, err := os.file_size(f)
	return err == nil ? u64(s) : ~u64(0)
}
FileRead :: proc(data : rawptr, sz : U64, count : U64, f : FileHandle) -> U64 { return cast(u64) fread(data, cast(uint) sz, cast(uint) count, f) }
FileWrite :: proc(data : rawptr, sz : U64, count : U64, f : FileHandle) -> U64 { return cast(u64) fwrite(data, cast(uint) sz, cast(uint) count, f) }
} // preproc endif// #ifndef IMGUI_DISABLE_DEFAULT_FILE_FUNCTIONS

// Helper: Load file content into memory
// Memory allocated with IM_ALLOC(), must be freed by user using IM_FREE() == Gui::MemFree()
// This can't really be used with "rt" because fseek size won't match read size.
FileLoadToMemory :: proc(filename : string, mode : string, out_file_size : ^uint = nil, padding_bytes : i32 = 0) -> rawptr
{
	IM_ASSERT(filename != "" && mode != "")
	if out_file_size != nil { out_file_size^ = 0 }

	f : FileHandle = FileOpen(filename, mode)
	if f == {} { return nil }

	file_size : uint = cast(uint) FileGetSize(f)
	if file_size == ~cast(uint)(0) {
		FileClose(f)
		return nil
	}

	file_data : rawptr = IM_ALLOC(file_size + cast(uint)padding_bytes)
	if file_data == nil {
		FileClose(f)
		return nil
	}
	if FileRead(file_data, 1, cast(u64)file_size, f) != cast(u64)file_size {
		FileClose(f)
		IM_FREE(file_data)
		return nil
	}
	if padding_bytes > 0 { memset(cast(rawptr) (cast([^]u8) file_data)[file_size:], 0, cast(int) padding_bytes) }

	FileClose(f)
	if out_file_size != nil { out_file_size^ = file_size }

	return file_data
}

