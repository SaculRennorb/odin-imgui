// Add string (each character of the UTF-8 string are added)
//-----------------------------------------------------------------------------
// [SECTION] FontGlyphRangesBuilder
//-----------------------------------------------------------------------------

FontGlyphRangesBuilder_AddText :: proc(this : ^FontGlyphRangesBuilder, text : [^]u8, text_end : ^u8 = nil)
{
	text := text
	for text_end != nil ? (cast(^u8)text < text_end) : text[0] != 0 {
		c : u32 = 0
		c_len : i32 = TextCharFromUtf8(&c, text, text_end)
		text = text[c_len:]
		if c_len == 0 { break }
		FontGlyphRangesBuilder_AddChar(this, cast(Wchar) c)
	}
}

// Add ranges, e.g. builder.AddRanges(FontAtlas::GetGlyphRangesDefault()) to force add all of ASCII/Latin+Ext
FontGlyphRangesBuilder_AddRanges :: proc(this : ^FontGlyphRangesBuilder, ranges : [^]Wchar)
{
	for ranges := ranges ; ranges[0] != {}; ranges = ranges[2:] {
		for c := ranges[0]; c <= ranges[1] && c <= IM_UNICODE_CODEPOINT_MAX; c += 1 {
			FontGlyphRangesBuilder_AddChar(this, cast(Wchar) c)
		}
	}
}

// Output new ranges
FontGlyphRangesBuilder_BuildRanges :: proc(this : ^FontGlyphRangesBuilder, out_ranges : ^Vector(Wchar))
{
	max_codepoint : i32 = IM_UNICODE_CODEPOINT_MAX
	for n : i32 = 0; n <= max_codepoint; n += 1 {
		if FontGlyphRangesBuilder_GetBit(this, uint(n)) {
			push_back(out_ranges, cast(Wchar) n)
			for n < max_codepoint && FontGlyphRangesBuilder_GetBit(this, uint(n + 1)) { post_incr(&n) }

			push_back(out_ranges, cast(Wchar) n)
		}
	}

	push_back(out_ranges, 0)
}

