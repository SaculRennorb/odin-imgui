PlatformImeData :: struct {
	WantVisible : bool, // A widget wants the IME to be visible
	InputPos : Vec2, // Position of the input cursor
	InputLineHeight : f32, // Line height
}

PlatformImeData_init :: proc(this : ^PlatformImeData) { this^ = {} }



