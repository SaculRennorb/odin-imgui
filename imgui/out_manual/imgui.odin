IsAliasKey :: #force_inline proc(key : Key) -> bool { return key >= Key_Aliases_BEGIN && key < Key_Aliases_END }
IsLRModKey :: #force_inline proc(key : Key) -> bool { return key >= Key.Key_LeftCtrl && key <= Key.Key_RightSuper }
ConvertSingleModFlagToKey :: #force_inline proc(key : Key) -> Key
{
	if key == Key.Mod_Ctrl { return Key.Key_ReservedForModCtrl }
	if key == Key.Mod_Shift { return Key.Key_ReservedForModShift }
	if key == Key.Mod_Alt { return Key.Key_ReservedForModAlt }
	if key == Key.Mod_Super { return Key.Key_ReservedForModSuper }
	return key
}

