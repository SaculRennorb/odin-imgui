// [SECTION] Widgets: PlotLines, PlotHistogram
//-------------------------------------------------------------------------
// - PlotEx() [Internal]
// - PlotLines()
// - PlotHistogram()
//-------------------------------------------------------------------------
// Plot/Graph widgets are not very good.
// Consider writing your own, or using a third-party one, see:
// - Plot https://github.com/epezent/implot
// - others https://github.com/ocornut/imgui/wiki/Useful-Extensions
//-------------------------------------------------------------------------

PlotEx :: proc(plot_type : PlotType, label : string, values_getter : proc(data : rawptr, idx : i32) -> f32, data : rawptr, values_count : i32, values_offset : i32, overlay_text : string, scale_min : f32, scale_max : f32, size_arg : Vec2) -> i32
{
	g : ^Context = GImGui
	window : ^Window = GetCurrentWindow()
	if window.SkipItems { return -1 }

	style : ^Style = &g.Style
	id : ID = GetID(window, label)

	label_size : Vec2 = CalcTextSize(label, true)
	frame_size : Vec2 = CalcItemSize(size_arg, CalcItemWidth(), label_size.y + style.FramePadding.y * 2.0)

	frame_bb : Rect; init(&frame_bb, window.DC.CursorPos, window.DC.CursorPos + frame_size)
	inner_bb : Rect; init(&inner_bb, frame_bb.Min + style.FramePadding, frame_bb.Max - style.FramePadding)
	total_bb : Rect; init(&total_bb, frame_bb.Min, frame_bb.Max + Vec2{label_size.x > 0.0 ? style.ItemInnerSpacing.x + label_size.x : 0.0, 0})
	ItemSize(total_bb, style.FramePadding.y)
	if !ItemAdd(total_bb, id, &frame_bb, ItemFlags_.ItemFlags_NoNav) { return -1 }
	hovered : bool
	ButtonBehavior(frame_bb, id, &hovered, nil)

	scale_min, scale_max := scale_min, scale_max
	// Determine scale from values if not specified
	if scale_min == FLT_MAX || scale_max == FLT_MAX {
		v_min : f32 = FLT_MAX
		v_max : f32 = -FLT_MAX
		for i : i32 = 0; i < values_count; i += 1 {
			v : f32 = values_getter(data, i)
			if v != v {
				// Ignore NaN values
				continue
			}
			v_min = Min(v_min, v)
			v_max = Max(v_max, v)
		}

		if scale_min == FLT_MAX { scale_min = v_min }
		if scale_max == FLT_MAX { scale_max = v_max }
	}

	RenderFrame(frame_bb.Min, frame_bb.Max, GetColorU32(Col_.Col_FrameBg), true, style.FrameRounding)

	values_count_min : i32 = (plot_type == PlotType.PlotType_Lines) ? 2 : 1
	idx_hovered : i32 = -1
	if values_count >= values_count_min {
		res_w : i32 = Min(cast(i32) frame_size.x, values_count) + ((plot_type == PlotType.PlotType_Lines) ? -1 : 0)
		item_count : i32 = values_count + ((plot_type == PlotType.PlotType_Lines) ? -1 : 0)

		// Tooltip on hover
		if hovered && Contains(inner_bb, g.IO.MousePos) {
			t : f32 = Clamp((g.IO.MousePos.x - inner_bb.Min.x) / (inner_bb.Max.x - inner_bb.Min.x), 0.0, 0.9999)
			v_idx : i32 = cast(i32) (t * f32(item_count))
			IM_ASSERT(v_idx >= 0 && v_idx < values_count)

			v0 : f32 = values_getter(data, (v_idx + values_offset) % values_count)
			v1 : f32 = values_getter(data, (v_idx + 1 + values_offset) % values_count)
			if plot_type == PlotType.PlotType_Lines { SetTooltip("%d: %8.4g\n%d: %8.4g", v_idx, v0, v_idx + 1, v1) }
			else if plot_type == PlotType.PlotType_Histogram { SetTooltip("%d: %8.4g", v_idx, v0) }
			idx_hovered = v_idx
		}

		t_step : f32 = 1.0 / cast(f32) res_w
		inv_scale : f32 = (scale_min == scale_max) ? 0.0 : (1.0 / (scale_max - scale_min))

		v0 : f32 = values_getter(data, (0 + values_offset) % values_count)
		t0 : f32 = 0.0
		tp0 : Vec2 = Vec2{t0, 1.0 - Saturate((v0 - scale_min) * inv_scale)}; // Point in the normalized space of our target rectangle
		histogram_zero_line_t : f32 = (scale_min * scale_max < 0.0) ? (1 + scale_min * inv_scale) : (scale_min < 0.0 ? 0.0 : 1.0); // Where does the zero line stands

		col_base : U32 = GetColorU32((plot_type == PlotType.PlotType_Lines) ? Col_.Col_PlotLines : Col_.Col_PlotHistogram)
		col_hovered : U32 = GetColorU32((plot_type == PlotType.PlotType_Lines) ? Col_.Col_PlotLinesHovered : Col_.Col_PlotHistogramHovered)

		for n : i32 = 0; n < res_w; n += 1 {
			t1 : f32 = t0 + t_step
			v1_idx : i32 = cast(i32) (t0 * f32(item_count) + 0.5)
			IM_ASSERT(v1_idx >= 0 && v1_idx < values_count)
			v1 : f32 = values_getter(data, (v1_idx + values_offset + 1) % values_count)
			tp1 : Vec2 = Vec2{t1, 1.0 - Saturate((v1 - scale_min) * inv_scale)}

			// NB: Draw calls are merged together by the DrawList system. Still, we should render our batch are lower level to save a bit of CPU.
			pos0 : Vec2 = Lerp(inner_bb.Min, inner_bb.Max, tp0)
			pos1 : Vec2 = Lerp(inner_bb.Min, inner_bb.Max, (plot_type == PlotType.PlotType_Lines) ? tp1 : Vec2{tp1.x, histogram_zero_line_t})
			if plot_type == PlotType.PlotType_Lines {
				AddLine(window.DrawList, pos0, pos1, idx_hovered == v1_idx ? col_hovered : col_base)
			}
			else if plot_type == PlotType.PlotType_Histogram {
				if pos1.x >= pos0.x + 2.0 { pos1.x -= 1.0 }
				AddRectFilled(window.DrawList, pos0, pos1, idx_hovered == v1_idx ? col_hovered : col_base)
			}

			t0 = t1
			tp0 = tp1
		}
	}

	// Text overlay
	if overlay_text != "" { RenderTextClipped(Vec2{frame_bb.Min.x, frame_bb.Min.y + style.FramePadding.y}, frame_bb.Max, overlay_text, nil, Vec2{0.5, 0.0}) }

	if label_size.x > 0.0 { RenderText(Vec2{frame_bb.Max.x + style.ItemInnerSpacing.x, inner_bb.Min.y}, label) }

	// Return hovered index or -1 if none are hovered.
	// This is currently not exposed in the public API because we need a larger redesign of the whole thing, but in the short-term we are making it available in PlotEx().
	return idx_hovered
}

